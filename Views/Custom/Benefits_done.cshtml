
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0">
    <title>寿全斋 - 百家企业送姜茶</title>
    <meta name="author" content="寿全斋电子商务有限公司">
    <link href="/favicon.ico" type="image/x-icon" rel="shortcut icon" />
    <link href="/Content/bootstrap.css" rel="stylesheet" />
    <style type="text/css">
        body {
            background: url(/Content/images/upfeathers.png);
        }
        .share-bg {
            width: 100%;
            height: 100%;
            position: absolute;
            left: 0px;
            top: 0px;
            z-index: 100;
            background: #000;
            opacity: 0.9;
            display: none;
        }
    </style>

</head>
<body>
    <div class="hidden">
        <span id="openid">@ViewBag.OpenId</span>
        <span id="appId">@ViewBag.AppId</span>
        <span id="timeStamp">@ViewBag.TimeStamp</span>
        <span id="nonce">@ViewBag.Nonce</span>
        <span id="signature">@ViewBag.Signature</span>
    </div>
    <div>
        <br />
        <br />
        <div><img src="~/Content/images/benefits_flow_03.png" class="img-responsive" /></div>
        <br /><br />
        <div class="text-center">
            <button class="btn btn-success btn-lg" id="share-button">
                分享到朋友圈，更大机会获得姜茶
            </button>
        </div>
        <div class="container">
            <img src="~/Content/images/benefits_done.png" class="img-responsive" style="padding:5%" />
        </div>
        <br /><br />
    </div>
    <div class="container share-bg">
        <div class="row">
            <div class="col-xs-12">
                <img src="//cdn.shouquanzhai.cn/Content/webapp_voice_share.png" class="img-responsive" />
            </div>
        </div>
    </div>
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/jquery.fullPage.min.js"></script>
    <script src="//res.wx.qq.com/open/js/jweixin-1.0.0.js" type="text/javascript"></script>
    <script>
        wx.config({
            debug: false, // 开启调试模式,调用的所有api的返回值会在客户端alert出来，若要查看传入的参数，可以在pc端打开，参数信息会通过log打出，仅在pc端时才会打印。
            appId: $("#appId").text(), // 必填，公众号的唯一标识
            timestamp: $("#timeStamp").text(), // 必填，生成签名的时间戳
            nonceStr: $("#nonce").text(), // 必填，生成签名的随机串
            signature: $("#signature").text(),// 必填，签名，见附录1
            jsApiList: ['onMenuShareTimeline', 'onMenuShareAppMessage']
            //必填，需要使用的JS接口列表，所有JS接口列表见附录2
        });
        wx.ready(function () {
            wx.onMenuShareTimeline({
                title: '寿全斋 百家企业送姜茶', // 分享标题
                desc: '寿全斋 百家企业送姜茶 不烦那几天喝 寿全斋红糖姜茶', // 分享描述
                link: "//webapp.shouquanzhai.cn/Custom/Wx_Redirect_Benefits",
                imgUrl: "http://webapp.shouquanzhai.cn/Content/images/period-aid-logo.png", // 分享图标
                type: 'link', // 分享类型,music、video或link，不填默认为link
                dataUrl: '', // 如果type是music或video，则要提供数据链接，默认为空
                success: function () {
                    // 用户确认分享后执行的回调函数
                    $.ajax({
                        url: "/Custom/Benefits_submit_share",
                        data: {
                            open_id: $("#openid").text()
                        },
                        type: "post",
                        success: function (data) {
                            //alert(data.result);
                            if (data.result == "SUCCESS") {
                                //alert("3");
                                //window.location.href = "/Custom/Benefits_info?open_id=" + $("#openid").text();
                                alert("感谢您的分享");
                            }
                        }
                    });
                },
                cancel: function () {
                    // 用户取消分享后执行的回调函数
                    //window.location.href = "/Custom/Benefits_info?open_id=" + $("#openid").text();
                    alert("分享取消");
                }
            });
            wx.onMenuShareAppMessage({
                title: '寿全斋 百家企业送姜茶', // 分享标题
                desc: '寿全斋 百家企业送姜茶 不烦那几天喝 寿全斋红糖姜茶', // 分享描述
                link: "//webapp.shouquanzhai.cn/Custom/Wx_Redirect_Benefits",
                imgUrl: "http://webapp.shouquanzhai.cn/Content/images/period-aid-logo.png", // 分享图标
                type: 'link', // 分享类型,music、video或link，不填默认为link
                dataUrl: '', // 如果type是music或video，则要提供数据链接，默认为空
                success: function () {
                    // 用户确认分享后执行的回调函数
                    $.ajax({
                        url: "/Custom/Benefits_submit_share",
                        data: {
                            open_id: $("#openid").text()
                        },
                        type: "post",
                        success: function (data) {
                            //alert(data.result);
                            if (data.result == "SUCCESS") {
                                //alert("3");
                                //window.location.href = "/Custom/Benefits_info?open_id=" + $("#openid").text();
                                alert("感谢您的分享");
                            }
                        }
                    });
                },
                cancel: function () {
                    // 用户取消分享后执行的回调函数
                    //window.location.href = "/Custom/Benefits_info?open_id=" + $("#openid").text();
                    alert("分享取消");
                }
            });
        });
        $(function () {
            $("#share-button").click(function () {
                $(".share-bg").show();
            })
            $(".share-bg").click(function () {
                $(".share-bg").hide();
            });
        });
    </script>
</body>
</html>
