@model PeriodAid.Models.Off_Seller

<div class="row">
    @using (Html.BeginForm("UploadSeller", "OffSeller", FormMethod.Post, new { enctype = "multipart/form-data",id = "file-from"}))
    {
        <div class="col-md-8">
            <div class="input-group">
                <input type="file" name="xlsxfile" id="xlsxfile" class="form-control input-sm" accept=".xlsx" />
                <span class="input-group-btn">
                    <button class="btn btn-success btn-sm" id="rev">上传</button>
                </span>
            </div>
        </div>
        <div class="col-md-4">
            <a class="btn btn-info btn-sm" href="~/Content/xlsx/联系人信息表-Template.xlsx">下载模板</a>
        </div>
    }
</div>
<script>
    $("#rev").click(function () {
        if ($("#xlsxfile").val() == "") {
            alert("无文件上传")
        }
        else {
        $("#file-from").submit()
        }
        return false
    })


</script>