@using (Html.BeginForm("EditManagerRoles", "OffManager",  FormMethod.Post,  new { @class = "form-horizontal", role = "form",@id="editroleform" }))
{
    @Html.AntiForgeryToken()
    <input class="hidden" value="@ViewBag.pid" id="id" name="id"/>
    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <div>@ViewBag.Roles</div>
            <label class="control-label col-md-3">选择权限</label>

                <div class="col-md-9">
@Html.DropDownList("role",ViewBag.RolesDropDownList as SelectList,new {@class="form-control" })
                </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-3 col-md-9">
                <input type="submit" value="保存" id="role-modify" class="btn btn-default" />
            </div>
        </div>
        </div>
        }
<script>
    $("#role-modify").on("click", function () {
            $("#editroleform").ajaxForm({
                success: function (data) {
                    if (data == "SUCCESS") {
                        $('.modal-box').modal('hide');
                        alert("修改成功");
                        $.ajax({
                            url: "/OffManager/ManagerListPartial",
                            success: function (data) {
                                $("#offmanager-manager-list").html(data)
                            }
                        });
                    }
                    else {
                        alert("修改失败", "", function () {
                        }, { type: 'error' });
                        $("#role-modify").prop("disabled", false);
                    }

                }

            });
    })
</script>

