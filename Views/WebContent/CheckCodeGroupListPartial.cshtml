@model PagedList.IPagedList<PeriodAid.Models.CheckCode_Group>
@using PagedList.Mvc;
<table class="table table-hover table-condensed table-list" style="width:100%;table-layout:fixed">
    <tr class="offline-table-background">
        <th style="width:2%">
            <input type="checkbox" class="allChk" />
        </th>
        <th style="width:10%">
            活动名称
        </th>
        <th style="width:20%">
            活动标题
        </th>
        <th style="width:30%">
            活动描述
        </th>
        <th style="width:15%"></th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                <input type="checkbox" name="subChk" value="@item.Id" data-region="@item.Id" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GroupName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EventTitle)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EventDescription)
            </td>
            <td>
                @Html.ActionLink("修改", "EditCheckCodeGroup", new { Cid = item.Id }, new { @class = "btn btn-xs btn-info ccg-edit" })
                @Html.ActionLink("删除", "DelCheckCodeGroup", new { Cid = item.Id }, new { @class = "btn btn-xs btn-danger ccg-del" })
            </td>
        </tr>
    }
</table>
<div class="text-right">@Html.PagedListPager(Model, page => Url.Action("CheckCodeGroupListPartial", new { page }))</div>
<script>
    //页码
    $(".pagination > li > a").click(function () {
        var l = $(this).attr("href");
        $.ajax({
            url: l,
            data:{
                query: $("#ccg-search-query").val()
            },
            success: function (data) {
                $("#ccg-list").html(data);
            }
        });
        return false;
    });
    //修改
    $(".ccg-edit").click(function () {
        var url = $(this).attr("href")
        var head = "修改活动信息"
        $.ajax({
            url: url,
            success: function (data) {
                $(".modal-con").html(data);
                $(".modal-box").modal();
                $(".modal-head").text(head)
            }
        });
        return false;
    });
    //删除
    $(".ccg-del").click(function () {
        var url = $(this).attr("href");
        confirm("确定要删除吗?", "", function (isConfirm) {
            if (isConfirm) {
                $.ajax({
                    url: url,
                    type: "post",
                    success: function (data) {
                        if (data.result == "SUCCESS") {
                            setTimeout(function () {
                                $.ajax({
                                    url: "/WebContent/CheckCodeGroupListPartial",
                                    success: function (data) {
                                        $("#ccg-list").html(data);
                                    }
                                })
                                alert("删除成功")
                            }, 1000);
                        } else {
                            alert("删除失败", "", function () {
                                //after click the confirm button, will run this callback function
                            }, { type: 'error' });
                        }
                    }
                })
            }
        });
        return false;
    })
</script>


