@model PeriodAid.Models.Store_Sales_Month

@{
    ViewBag.Title = "删除月度销售记录";
    Layout = "~/Views/Shared/_OfflineSalesLayout.cshtml";
}

<h2>Delete_Store_Sales_Month</h2>

<h4>确定删除月度销售记录?</h4>
<hr />
<div>
    <dl class="dl-horizontal">
        <dt>
            时间
        </dt>

        <dd>
            @(Model.Sales_Year)-@(Model.Sales_Month)
        </dd>

        <dt>
            门店名称
        </dt>

        <dd>
            @(Model.Store.Store_System.System_Name)-@(Model.Store.Store_Name)
        </dd>

        <dt>
            累计销售数量
        </dt>

        <dd>
            @Model.Store_Sales_Month_Details.Sum(m => m.Sales_Num)
        </dd>

        <dt>
            累计销售金额
        </dt>

        <dd>
            @Model.Store_Sales_Month_Details.Sum(m => m.Sales_Amount)
        </dd>
    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="删除月度销售记录" class="btn btn-default btn-danger" />
            @Html.ActionLink("返回列表", "Index_Store_Sales_Month", new { }, new { @class = "btn btn-default" })
        </div>
    }
</div>
