@model PeriodAid.Models.Store_System_ViewModel

@{
    ViewBag.Title = "创建门店系统";
    Layout = "~/Views/Shared/_OfflineSalesLayout.cshtml";
}

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>创建系统</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.System_Name, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10 col-xs-12">
                @Html.EditorFor(model => model.System_Name, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.System_Name, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10 col-xs-12">
                <input type="submit" value="添加门店系统" class="btn btn-success" />
                <a href="/OfflineSales/List_Store_System" class="btn btn-default">返回列表</a>
            </div>
        </div>
    </div>
}

