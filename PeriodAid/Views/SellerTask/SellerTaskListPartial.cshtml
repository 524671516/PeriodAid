@model IEnumerable<PeriodAid.Models.Off_SellerTask>


@foreach (var item in Model)
{
        <li class="swipeout">
            <div class="swipeout-content item-content">
                <div class="item-media"><img src="~/Content/images/wx_gambling_background02.jpg" width="50" height="50" /></div>
                <div class="item-inner">
                    <div class="item-title-tow">
                        @*<div class="item-title">@item.LastUpdateUser</div>*@
                        <div class="item-title">@item.SellerId</div>
                    </div>
                    
                    <div class="item-subtitle color-gray">
                        <span class="item-storeid">@item.StoreId</span>
                        <span class="item-sellerid" style="float:right">@item.ApplyDate.ToString("yyyy-MM-dd")</span>
                    </div>
                </div>
            </div>
            <div class="swipeout-actions-right">
                @Html.ActionLink("修改", "Edit", new { id = item.Id },new { @class = "bg-green" }) 
            </div>
        </li>
}
