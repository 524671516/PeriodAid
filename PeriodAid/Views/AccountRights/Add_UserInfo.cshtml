@model PeriodAid.Models.ApplicationUser
    <style>
        .form-horizontal .control-label{
            padding-top:9px
        }
        .has-error{
            color:#de3838
        }
    </style>
<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
    <h2>新增人员信息</h2>
</div>
<div class="modal-body">
    @using (Html.BeginForm("Add_UserInfo", "AccountRights", FormMethod.Post, new { @id = "add_user_form" }))
    {
        @Html.AntiForgeryToken()
        <div class="form-horizontal">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                <label class="col-md-2 control-label">姓名</label>
                <div class="col-md-8">
                    @Html.EditorFor(model => model.NickName, new { htmlAttributes = new { @class = "form-control", @autocomplete = "off" } })
                    @Html.ValidationMessageFor(model => model.NickName, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <label class="col-md-2 control-label">用户名</label>
                <div class="col-md-8">
                    @Html.EditorFor(model => model.UserName, new { htmlAttributes = new { @class = "form-control", @autocomplete = "off" } })
                    @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <label class="col-md-2 control-label">联系电话</label>
                <div class="col-md-8">
                    @Html.EditorFor(model => model.PhoneNumber, new { htmlAttributes = new { @class = "form-control", @autocomplete = "off" } })
                    @Html.ValidationMessageFor(model => model.PhoneNumber, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-8">
                    <input type="submit" value="新增" class="btn btn-default" id="add-submit" />
                </div>
            </div>
        </div>
    }
</div>
<script>
    $(function () {
        $("#add_user_form").validate({
            debug: true,
            rules: {
                UserName: {
                    required: true
                },
                NickName: {
                    required: true
                },
                PhoneNumber: {
                    required: true
                },
            },
            messages: {
                UserName: {
                    required: "用户名不能为空"
                },
                NickName: {
                    required: "姓名不能为空"
                },
                PhoneNumber: {
                    required: "联系电话不能为空"
                }
            },
            //验证通过的正式提交函数
            submitHandler: function (form) {
                $(form).ajaxSubmit(function (data) {
                    $("#add-submit").attr("disabled", true);
                    if (data.result == "SUCCESS") {
                        $("#manager_list").html("")
                        $("#tm-view-loading").show()
                        $.alert({
                            title: '提示!',
                            content: '添加成功!',
                            type: 'green',
                        })
                        $('.modal-box').modal('hide');
                        $("#myModal").modal('hide')
                        $('.modal-backdrop.in').remove()
                        $('body').removeClass('modal-open')
                        $.ajax({
                            url: "/AccountRights/RightsListPartial",
                            success: function (data) {
                                $("#manager_list").html(data)
                                $("#tm-view-loading").hide()
                            }
                        });
                    }
                    else if(data.result == "FAIL"){
                        $.alert({
                            title: '提示!',
                            content: '用户不存在!',
                            type: 'green',
                        })
                        $('.modal-box').modal('hide');
                        $("#myModal").modal('hide')
                        $('.modal-backdrop.in').remove()
                    }
                    else if (data.result == "ERROR") {
                        $.alert({
                            title: '提示!',
                            content: '用户已存在!',
                            type: 'green',
                        })
                        $('.modal-box').modal('hide');
                        $("#myModal").modal('hide')
                        $('.modal-backdrop.in').remove()
                    }
                    else {
                        $.alert({
                            title: '提示!',
                            content: '权限不足!',
                            type: 'red',
                        })
                        $('.modal-box').modal('hide');
                        $("#myModal").modal('hide')
                        $('.modal-backdrop.in').remove()
                    }
                })
            },
            errorClass: "has-error",
            //验证失败
            errorPlacement: function (error, element) {
                error.appendTo(element.parent())
            }
        })
    });
</script>


