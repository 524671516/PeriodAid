@model  PagedList.IPagedList<PeriodAid.Models.Employee>
@using PagedList.Mvc;
@using PeriodAid.Models;
<table class="table table-condensed table-hover" style="width:100%;table-layout:fixed">
    <tr class="offline-table-background">
        <th style="width:15%;">
            Id
        </th>
        <th style="width:15%;">
            姓名
        </th>
        <th style="width:30%;">
            用户名
        </th>
        <th style="width:20%;">
            电话
        </th>
        <th style="width:20%;"></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NickName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UserName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Mobile)
            </td>
            <td>
                <a class="btn btn-xs btn-primary select_btn" data-id="@item.Id" role="button">设置权限</a>
            </td>
        </tr>
    }
</table>
<div class="text-right">@Html.PagedListPager(Model, page => Url.Action("RightsListPartial", new { page }))</div>
<script>
    //页码切换
    $(".pagination > li > a").click(function () {
        var l = $(this).attr("href");
        var query = $("#employee_name").val();
        $.ajax({
            url: l,
            data: {
                query: query
            },
            success: function (data) {
                $("#manager_list").html(data)
            }
        });
        return false;
    });
    $(".select_btn").on("click", function () {
        $(this).attr("href", "/AccountRights/AccountRights_View/?userId=" + $(this).attr("data-id"))
    })
</script>