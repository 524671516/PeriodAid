                                <li class="left-navbar" style="cursor:pointer"><a href="/PlattformInventory/JD_Traffic?plattformId=1"><i class="fa fa-arrow-down"></i>&nbsp;&nbsp;上传下载渠道统计</a><div class="san_you hidden"></div></li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-10" id="col_10_style">
                @RenderBody()
            </div>
        </div>
        <footer>
            @*<p>&copy; @DateTime.Now.Year - 我的 ASP.NET 应用程序</p>*@
        </footer>
    </div>
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
