                                    </a>
                                    <div class="san_you hidden"></div>
                                </li>
                                <li class="left-navbar" style="cursor:pointer">
                                    <a href="/VisitManagement/Visit_View">
                                        <i class="fa fa-window-maximize"></i>
                                        &nbsp;&nbsp;新客户拜访管理系统
                                    </a>
                                    <div class="san_you hidden"></div>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-10" id="col_10_style">
                @RenderBody()
            </div>
        </div>
    </div>
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
