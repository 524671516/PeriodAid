    <script src="~/Scripts/jquery-confirm.js"></script>
    <script src="~/Scripts/bootstrap-datetimepicker.min.js" charset="utf-8"></script>
    <script src="~/Scripts/bootstrap-select.js"></script>
    <script src="~/Scripts/defaults-zh_CN.min.js"></script>
    <script src="~/Scripts/SalesProcess.js"></script>
    <script type="text/javascript" src="~/Scripts/jquery-ui.min.js"></script>
    <script src="~/Scripts/off-JavaScript.js"></script>
    <script src="~/Scripts/bootstrap-typeahead.js"></script>
    <script src="~/Scripts/kalendae.standalone.js"></script>
    <script src="~/Scripts/ajaxfileupload.js"></script>
    @RenderSection("scripts", required: false)
</body>
</html>
<script>
    // 移入、移出三角样式
    $("#ul_btn li").mouseover(function () {
        $(this).children(".position_ul").removeClass("hidden")
        $(this).children(".san_you").removeClass("hidden")
    })
    $("#ul_btn li").mouseout(function () {
        $(this).children(".position_ul").addClass("hidden")
        $(this).children(".san_you").addClass("hidden")
    })
    // 导航二级
    $(".nav_relative_ul li").mouseover(function () {
        $(this).children(".nav_absolute_ul").removeClass("hidden")
    })
    $(".nav_relative_ul li").mouseout(function () {
        $(this).children(".nav_absolute_ul").addClass("hidden")
    })
    $(".nav_absolute_ul li").mouseover(function () {
        $(this).css("background", "#fff")
    })
    $(".nav_absolute_ul li").mouseout(function () {
        $(this).css("background", "none")
    })
    // 侧边栏li移动
    $(".left-navbar").mouseover(function () {
        $(this).children("a").css("paddingLeft", "5px")
    })
    $(".left-navbar").mouseout(function () {
        $(this).children("a").css("paddingLeft", "0px")
    })
</script>