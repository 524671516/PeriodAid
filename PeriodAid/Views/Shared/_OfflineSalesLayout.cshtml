<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>线下销售系统</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    <link href="~/Content/jquery-ui.min.css" rel="stylesheet" />
    <link href="~/Content/PagedList.css" rel="stylesheet" />
    
</head>
<body class="reset">
    <div class="container">
        @RenderBody()
    </div>
    <div class="navbar navbar-fixed-bottom offline-navbar-bottom">
        <div class="container">
            <div class="row">
                <div class="col-xs-3 text-center">
                    <a href="/OfflineSales/Sales_Home" style="display:block">
                        <span class="glyphicon glyphicon-usd nav-button"></span><br />
                        销售
                    </a>
                </div>
                <div class="col-xs-3 text-center">
                    <a href="/OfflineSales/Store_Home" style="display:block">
                        <span class="glyphicon glyphicon-home nav-button"></span><br />
                        门店
                    </a>
                </div>
                <div class="col-xs-3 text-center">
                    <a href="/OfflineSales/Seller_Home" style="display:block">
                        <span class="glyphicon glyphicon-user nav-button"></span><br />
                        促销员
                    </a>
                </div>
                <div class="col-xs-3 text-center">
                    <a href="/OfflineSales/Event_Home" style="display:block">
                        <span class="glyphicon glyphicon-tag nav-button"></span><br />
                        活动
                    </a>
                </div>
            </div>
        </div>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/Scripts/jquery-ui.min.js"></script>
    @RenderSection("scripts", required: false)
</body>
</html>
