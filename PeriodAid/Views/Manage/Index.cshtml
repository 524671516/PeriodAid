@model PeriodAid.Models.IndexViewModel
@{
    ViewBag.Title = "管理";
}

<br />
<p class="text-success">@ViewBag.StatusMessage</p>
<div class="row">
    <div class="col-md-4">
        <form class="form-horizontal">
            <div class="form-group">
                <h4>个人账户设置</h4>
                <hr />
            </div>
            <div class="form-group">
                <label class="col-sm-5 control-label">密码</label>
                <div class="col-sm-7">
                    [
                    @if (Model.HasPassword)
            {
                        @Html.ActionLink("更改密码", "ChangePassword")
                    }
                    else
                    {
                        @Html.ActionLink("创建", "SetPassword")
                    }
                    ]
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-5 control-label">外部登录名</label>
                <div class="col-sm-7">
                    @Model.Logins.Count [
                    @Html.ActionLink("管理", "ManageLogins") ]
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-5 control-label">双因素身份验证</label>
                <div class="col-sm-7">
                    @foreach (var item in ViewBag.SystemList)
                    {
                        //@Html.ActionLink("设置管理员", "Off_UpdateManager", new { id = item.Id }, new { @class = "btn btn-sm btn-danger manager-button" })
                        @Html.ActionLink((string)item.SystemName, "updateSystem", new { id = item.Id }, new { @class = "btn btn-sm btn-info edit-button", style = "margin:5px 0" })<br />
                    }
                </div>
            </div>
        </form>
    </div>
    
    
</div>
