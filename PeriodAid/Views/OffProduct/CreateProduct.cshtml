@model PeriodAid.Models.Off_Product

@using (Html.BeginForm("CreateProduct", "OffProduct", FormMethod.Post, new { @id = "offproduct-product-form" }))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.Off_System_Id)
    @Html.HiddenFor(m => m.status)
    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <label class="control-label col-md-2" id="ItemName" name="ItemName">产品名称</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.ItemName, new { htmlAttributes = new { @class = "form-control",@required="required",@maxlength="20" } })
                @Html.ValidationMessageFor(model => model.ItemName, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2" id="SimpleName" name="SimpleName">产品简称</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.SimpleName, new { htmlAttributes = new { @class = "form-control",@required="required",@maxlength="20" } })
                @Html.ValidationMessageFor(model => model.SimpleName, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2" id="Spec" name="Spec">产品规格</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Spec, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Spec, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2" id="ItemCode" name="ItemCode">产品编码</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.ItemCode, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.ItemCode, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2" id="SalesPrice" name="SalesPrice">销售单价</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.SalesPrice, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.SalesPrice, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="保存" class="btn btn-default" id="create-product"/>
            </div>
        </div>
    </div>
}
<script>
    $(function () {
        //表单验证
        $('#offproduct-product-form').validate({
            focusCleanup: true,
            errorPlacement: function (error, element) {
                $("#create-product").attr("disabled", false).val("保存");
                element.parent().parent().addClass("has-error");
            },
            submitHandler: function (form) {
                setTimeout(formsubmit, 1000);
            },
        })
        //按钮点击
        $("#create-product").click(function () {
            $(".form-group").removeClass("has-error");
            $(this).attr("disabled", "disabled").val("保存中...");
            $('#offproduct-product-form').submit();
        })
    });     
    function formsubmit() {
        $('#offproduct-product-form').ajaxSubmit(function (data) {
            if (data == "SUCCESS") {
                $('.modal-box').modal('hide');
                alert("添加成功");
                $.ajax({
                    url: "/OffProduct/ProductListPartial",
                    success: function (data) {
                        $("#offproduct-product-list").html(data)
                    },
                    error: function () {
                        alert("提交失败");
                        $("#create-product").attr("disabled", false).val("保存");
                    }
                })
            }
            else {
                alert("提交失败");
                $("#create-product").attr("disabled", false).val("保存");
            }
        });
    }
</script>
