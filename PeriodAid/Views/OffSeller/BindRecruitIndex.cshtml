
@{
    ViewBag.Title = "新招募促销员";
    Layout = "~/Views/Shared/_OffLayout.cshtml";
    ViewBag.Current = "headingFour";
}

<table class="offline-search-box">
    <tr>
        <td class="pull-right">
            <label>促销员：</label>
            <input class="form-control input-sm offline-search-inline" id="offseller-bindrecruit-query" placeholder="搜索内容" />
            <a class="btn btn-info btn-sm" id="offseller-bindrecruit-search"><i class="fa fa-search"></i>&nbsp;&nbsp;搜索</a>
        </td>
    </tr>
</table>
<div>
    <ul class="nav nav-tabs row">
        <li role="presentation" class="active"><a class="offseller-bindrecruit-filter" data-rel="false" href="javascript:;">未绑定促销员</a></li>
        <li role="presentation"><a class="offseller-bindrecruit-filter" data-rel="true" href="javascript:;">已绑定促销员</a></li>
    </ul>
</div>
<div id="offseller-bindrecruit-list">

</div>
@Html.Partial("modal")
<input class="hidden" id="offseller-bindrecruit-bool" />
<script>
    $(function () {
        $.ajax({
            url: "/OffSeller/BindRecruitIndexPartial",
            success: function (data) {
                $("#offseller-bindrecruit-list").html(data);
            }
        });
        //标签页
        $(".offseller-bindrecruit-filter").click(function () {
            $(this).parent("li").addClass("active").siblings().removeClass("active");
            $("#offseller-bindrecruit-bool").val($(this).attr("data-rel"));
            $.ajax({
                url: "/OffSeller/BindRecruitIndexPartial?bind=" + $("#offseller-bindrecruit-bool").val(),
                success: function (data) {
                    $("#offseller-bindrecruit-list").html(data);
                }
            });
            return false;
        });
        //搜索
        $("#offseller-bindrecruit-query").val(decodeURIComponent($("#offseller-bindrecruit-query").val()));
        $("#offseller-bindrecruit-search").click(function () {
            var url = "/OffSeller/BindRecruitIndexPartial";
            var cuxa = $("#offseller-bindrecruit-query").val();
            var bool = $("#offseller-bindrecruit-search").val();
            $.ajax({
                url: url,
                data: {
                    query: cuxa,
                    bind: bool
                },
                success: function (data) {
                    $("#offseller-bindrecruit-list").html(data);
                }
            })
        })

    })
</script>

