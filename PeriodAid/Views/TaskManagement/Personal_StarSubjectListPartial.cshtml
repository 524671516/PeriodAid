@model IEnumerable<PeriodAid.Models.Subject>
@if (Model.Count() != 0)
{
    <h3>
        <i class="fa fa-star color-blue" aria-hidden="true"></i>
        &nbsp;星标任务
    </h3>
    foreach (var item in Model)
    {
        <div class="col-md-3 card-wrap">
            <div class="card-item" style="background-image: url('../../Content/images/wx_gambling_background02_01.jpg');" data-link="@item.Id">
                <div class="card-header clear-float">
                    <div class="card-header-left float-left">@item.SubjectTitle</div>
                    <div class="card-header-right float-right">设置</div>
                </div>
                <div class="card-body">
                    <div class="card-body">
                        @if (item.Remarks == null)
                        {
                            <div class="color-gray">@Html.Encode("无描述")</div>
                        }
                        else
                        {
                            @Html.Encode(item.Remarks);
                        }
                    </div>

                </div>
                <div class="card-footer">@item.CreateTime.ToString("yyyy-MM-dd")</div>
                <div class="card-mask"></div>
            </div>
        </div>
    }
}

