@using PeriodAid.Models;
@model PeriodAid.Models.Subject
<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
    <h4 class="modal-title">@Html.Encode(Model.SubjectTitle + "的操作日志")</h4>
</div>
<div class="container-fluid">
    <div class="btn-group btn-group-justified" role="group" style="padding:10px;">
        <div class="btn-group">
            <select class="selectpicker" id="tm_select_straff" data-width="100%">
                <option value="@Model.HolderId" selected>@Model.Holder.NickName</option>
                @foreach (var item in ViewBag.EmployeeDropDown)
                {
                    if (item.Id == Model.HolderId)
                    {
                        continue;
                    }
                    else
                    {
                        <option value="@item.Id">@item.NickName</option>
                    }
                }
            </select>
        </div>
        <div class="btn-group">
            <select class="selectpicker" id="tm_select_type" data-width="100%">
                <option value="5" selected>全部</option>
                <option value="0">任务</option>
                <option value="1">子任务</option>
                <option value="2">文件</option>
            </select>
        </div>
        <div class="btn-group">
            <select class="selectpicker" id="tm_select_time" data-width="100%">
                <option value="3" selected>全部</option>
                <option value="4">当日</option>
            </select>
        </div>
    </div>
    <div class="tm_modal_ul_wrap modal-list-pannel">
        <ul class="list-group tm_modal_list_ul" id="tm_modal_logs_area"></ul>
    </div>
</div>
<div class="modal-footer">
    <button type="button" class="btn btn-default" data-dismiss="modal">关闭</button>
</div>
<script>
    $(document).ready(function () {
        $('#tm_select_straff').selectpicker({
            liveSearch: true,
            liveSearchPlaceholder: "搜索人员",
            title: "人员选择"
        });
        $('#tm_select_type').selectpicker({
            title: "类型"
        });
        $('#tm_select_time').selectpicker({
            title: "时间"
        });
        $.ajax({
            url: "/TaskManagement/GetLogs",
            data: {
                employeeId: $("#tm_select_straff").val(),
                SubjectId: $("#pannel-wrap").attr("data-sid"),
                logTime: $("#tm_select_time").val(),
                logtype: $("#tm_select_type").val()
            },
            success: function (data) {
                $("#tm_modal_logs_area").append(data)
            }
        })
    });
  
    $(".tm_modal-nav").on("click", ".list-group-item", function () {
        $("#loading-p").show();
        $.ajax({
            url: $(this).attr("data-href"),
            data: {
                SubjectId: $("#pannel-wrap").attr("data-sid")
            },
            success: function (data) {
                $("#tm_modal_list_area").html(data);
                $("#loading-p").hide();
            },
            error: function () {
                ErrorAlert("操作失败。");
            }
        })
    })
    $("#tm_select_straff").on("change", function () {
        $("#tm_modal_logs_area").html("");
        $.ajax({
            url: "/TaskManagement/GetLogs",
            type: 'post',
            data: {
                employeeId: $("#tm_select_straff").val(),
                SubjectId: $("#pannel-wrap").attr("data-sid")
            },
            success: function (data) {
                $("#tm_modal_logs_area").append(data)
            }
        })
    })
    $("#tm_select_time").on("change", function () {
        $("#tm_modal_logs_area").html("");
        $.ajax({
            url: "/TaskManagement/GetLogs",
            type: "post",
            data: {
                employeeId: $("#tm_select_straff").val(),
                SubjectId: $("#pannel-wrap").attr("data-sid"),
                logTime: $("#tm_select_time").val()
            },
            success: function (data) {
                $("#tm_modal_logs_area").append(data)
            }
        })
    })

    $("#tm_select_type").on("change", function () {
        $("#tm_modal_logs_area").html("");
        console.log($("#tm_select_type").val())
        $.ajax({
            url: "/TaskManagement/GetLogs",
            type: "post",
            data: {
                employeeId: $("#tm_select_straff").val(),
                SubjectId: $("#pannel-wrap").attr("data-sid"),
                logtype: $("#tm_select_type").val()
            },
            success: function (data) {
                $("#tm_modal_logs_area").append(data)
            }
        })
    })

</script>

