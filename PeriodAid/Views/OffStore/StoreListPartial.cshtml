@model PagedList.IPagedList<PeriodAid.Models.Off_Store>
@using PagedList.Mvc;
<table class="table table-hover table-condensed table-list" style="width:100%;table-layout:fixed">
    <tr class="offline-table-background">
        <th style="width:2%">
            <input type="checkbox" class="allChk" />
        </th>
        <th style="width:15%">
            渠道
        </th> 
        <th style="width:20%">
            门店名称
        </th>
        <th style="width:30%">
            地址
        </th>
        <th style="width:12%"></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                <input type="checkbox" name="subChk" value="@item.Id" data-region="@item.Off_StoreSystemId" />
            </td>
            <td class="ellipsis">
                @Html.DisplayFor(modelItem => item.Off_StoreSystem.SystemName)
            </td>
            <td class="ellipsis ">
                @Html.DisplayFor(modelItem => item.StoreName)
            </td>
            
            <td class="ellipsis ">
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                @Html.ActionLink("修改", "EditStorePartial", new { id = item.Id }, new { @class = "btn btn-xs btn-info offstore-store-edit" })
                @Html.ActionLink("删除", "DeleteStoreAjax", new { id = item.Id }, new { @class = "btn btn-xs btn-danger offstore-store-del" })
            </td>
        </tr>
    }
</table>
<div class="text-right">@Html.PagedListPager(Model, page => Url.Action("StoreListPartial", new { page }))</div>
<script>
    $(function () {
        //页码
        $(".pagination > li > a").click(function () {
            var l = $(this).attr("href");
            var query = $("#offstore-search-query").val();
            l = l + "&query=" + query;
            $.ajax({
                url: l,
                success: function (data) {
                    console.log(data);
                    $("#offstore-list").html(data);
                }
            });
            return false;
        });
        //修改门店信息
        $(".offstore-store-edit").click(function () {
            var url = $(this).attr("href")
            var head = "修改门店信息"
            $.ajax({
                url: url,
                success: function (data) {
                    $(".modal-con").html(data);
                    $(".modal-box").modal();
                    $(".modal-head").text(head)
                }
            });
            return false;
        });
        //删除门店
        $(".offstore-store-del").click(function () {
            var url = $(this).attr("href");
            confirm("确定要删除吗?", "你将把此条信息从门店列表中删除", function (isConfirm) {
                if (isConfirm) {
                    $.ajax({
                        url: url,
                        type: "post",
                        success: function (data) {
                            if (data.result == "SUCCESS") {
                                setTimeout(function () {
                                    $.ajax({
                                        url: "/OffStore/StoreListPartial",
                                        success: function (data) {
                                            $("#offstore-list").html(data);
                                        }
                                    })
                                    alert("删除成功")
                                }, 1000);
                            } else {
                                alert("删除失败", "未知错误", function () {
                                    //after click the confirm button, will run this callback function
                                }, { type: 'error' });
                            }
                        }
                    })
                }
            });
            return false;
        })
    });
</script>
