@model PagedList.IPagedList<PeriodAid.Models.Off_Store>
@using PagedList.Mvc;
<table class="table table-hover table-condensed table-list" style="width:100%;table-layout:fixed">
    <tr class="offline-table-background">
        <th style="width:2%">
            <input type="checkbox" class="allChk" />
        </th>
        <th style="width:15%">
            门店名称
        </th>
        <th style="width:5%">
            区域
        </th>
        <th style="width:12%">
            经销商
        </th>
        <th style="width:30%">
            地址
        </th>
        <th style="width:12%">
            经度
        </th>
        <th style="width:12%">
            纬度
        </th>
        <th style="width:12%"></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                <input type="checkbox" name="subChk" value="@item.Id" data-region="@item.Region" />
            </td>
            <td class="ellipsis ">
                @Html.DisplayFor(modelItem => item.StoreName)
            </td>
            <td class="ellipsis">
                @Html.DisplayFor(modelItem => item.Region)
            </td>
            <td class="ellipsis ">
                @Html.DisplayFor(modelItem => item.Distributor)
            </td>
            <td class="ellipsis ">
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td class="ellipsis ">
                @Html.DisplayFor(modelItem => item.Longitude)
            </td>
            <td class="ellipsis ">
                @Html.DisplayFor(modelItem => item.Latitude)
            </td>
            <td>
                @Html.ActionLink("修改", "EditStorePartial", new { id = item.Id }, new { @class = "btn btn-xs btn-info offstore-store-edit" })
                @Html.ActionLink("删除", "Off_DeleteStoreAjax", new { id = item.Id }, new { @class = "btn btn-xs btn-danger offstore-store-del" })
            </td>
        </tr>
    }
</table>
<div class="modal fade" id="Mod">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title">修改区域</h4>
            </div>
            <div class="modal-body" id="Modcontent">
                <div class='row'>
                    <div class='col-md-6'><input class='form-control' id="check-region" type='text' /></div>
                    <div class='col-md-6'><input class='form-control' id='change-content' type='text' placeholder='替换' /></div>
                </div>
            </div>
            <div class="modal-footer" style="margin-top:-5px;">
                <button type="button" class="btn btn-success check-sure">确定</button>
                <button type="button" class="btn btn-danger check-fail">取消</button>
            </div>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div><!-- /.modal -->
<div class="text-right">@Html.PagedListPager(Model, page => Url.Action("StoreListPartial", new { page }))</div>
<script>
    $(function () {
        //页码
        $(".pagination > li > a").click(function () {
            var l = $(this).attr("href");
            var query = $("#offstore-search-query").val();
            l = l + "&query=" + query;
            $.ajax({
                url: l,
                success: function (data) {
                    $("#offstore-list").html(data);
                }
            });
            return false;
        });
        //修改门店信息
        $(".offstore-store-edit").click(function () {
            var url = $(this).attr("href")
            var head = "修改门店信息"
            $.ajax({
                url: url,
                success: function (data) {
                    $(".modal-con").html(data);
                    $(".modal-box").modal();
                    $(".modal-head").text(head)
                }
            });
            return false;
        });

        $(".offstore-store-del").click(function () {
            var result = confirm("确定删除吗？");
            if (result) {
                var url = $(this).attr("href");
                $.ajax({
                    url: url,
                    type: "post",
                    success: function (data) {
                        if (data.result == "SUCCESS") {
                            $.ajax({
                                url: "/OffStore/StoreListPartial",
                                success: function (data) {
                                    $("#offstore-list").html(data);
                                }
                            })
                        }
                    }
                })
            }
            return false;
        })
    });
   //批量修改区域
    $("#Modregion").click(function () {
        var checkedNum = $("input[name='subChk']:checked").length;
        if (checkedNum == 0) {
            alert("请选择至少一项！");
            return;
        } else {
            var checkedList = new Array();
            var checkedRegion = new Array();
            $("input[name='subChk']:checked").each(function () {
                checkedList.push($(this).val());
                checkedRegion.push($(this).attr("data-region"));
            });
            for (var i = 0; i < checkedRegion.length; i++) {
                $("#check-region").val(checkedRegion[0])
            }
            $("#Mod").modal('show');
        }
    });
    $(".check-sure").click(function () {
        if (confirm("确定要修改所选门店区域？")) {
            var link_url = "/OfflineSales/Off_Store_AreaChange_batch";
            var modify_area = $("#change-content").val();
            var checkedList = new Array();
            $("input[name='subChk']:checked").each(function () {
                checkedList.push($(this).val());
            });
            $.ajax({
                url: link_url,
                type: "post",
                data: {
                    ids: checkedList.toString(),
                    modify_area: modify_area
                },
                success: function (data) {
                    if (data == "SUCCESS") {
                        $("#Mod").modal('hide');
                        $.ajax({
                            url: "/OfflineSales/Off_Store_ajaxlist",
                            success: function (data) {
                                $("#list-container").html(data);
                            }
                        })
                    }
                }
            })
        }
    });
    $(".check-fail").click(function () {
        $("#Mod").modal('hide')
    })
</script>
