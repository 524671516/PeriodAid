@model IEnumerable<PeriodAid.Models.Off_StoreSystem>

@{
    ViewBag.Title = "线下门店信息";
    Layout = "~/Views/Shared/_OffLayout.cshtml";
    ViewBag.Current = "headingOne";
}
<table class="offline-search-box">
    <tr>
        <td class="pull-right">
            <label>渠道名称：</label>
            <input class="form-control input-sm offline-search-inline" id="storesystem-search-query" placeholder="搜索内容" />
            <a class="btn btn-info btn-sm" id="storesystem-search-btn"><i class="fa fa-search"></i>&nbsp;&nbsp;搜索</a>
        </td>
    </tr>
</table>
<div>
    <ul class="list-inline list-unstyled row">
        <li><a class="btn btn-info btn-sm" id="storesystem-create"><i class="fa fa-plus"></i>&nbsp;&nbsp;新增渠道信息</a></li>
    </ul>
</div>
<br />
<div id="storesystem-list">

</div>
@Html.Partial("modal")
<script>
    $(function () {
        $.ajax({
            url: "/OffStore/StoreSystemListPartial",
            success: function (data) {
                $("#storesystem-list").html(data);
            }
        })
    });
    //搜索
    $("#storesystem-search-btn").click(function () {
        $.ajax({
            url: "/OffStore/StoreSystemListPartial",
            data: {
                query: $("#storesystem-search-query").val()
            },
            success: function (data) {
                $("#storesystem-list").html(data);
            }
        });
    });
    //新增渠道
    $("#storesystem-create").click(function () {
        var link_url = "/OffStore/CreateStoreSystemPartial"
        var head = "新增渠道"
        $.ajax({
            url: link_url,
            success: function (data) {
                $(".modal-con").html(data);
                $(".modal-box").modal();
                $(".modal-head").text(head)
            }
        })
        return false
    });

</script>
