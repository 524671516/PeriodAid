@model PagedList.IPagedList<PeriodAid.Models.Off_StoreSystem>
@using PagedList.Mvc;
<table class="table table-hover table-condensed table-list" style="width:100%;table-layout:fixed">
    <tr class="offline-table-background">
        <th style="width:2%">
            <input type="checkbox" class="allChk" />
        </th>
        <th style="width:10%">
            渠道名称
        </th>
        <th style="width:10%">
            批发商
        </th>
        <th style="width:10%">
            区域
        </th>
        <th style="width:50%">
            产品
        </th>
        <th style="width:12%">
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                <input type="checkbox" name="subChk" value="@item.Id" data-region="@item.Off_System_Id" />
            </td>
            <td class="ellipsis ">
                @Html.DisplayFor(modelItem => item.SystemName)
            </td>
            <td class="ellipsis">
                @Html.DisplayFor(modelItem => item.Distributor)
            </td>
            <td class="ellipsis ">
                @Html.DisplayFor(modelItem => item.Region)
            </td>
            <td class="ellipsis ">
            </td>
            <td>
                @Html.ActionLink("修改", "EditStoreSystemPartial", new { id = item.Id }, new { @class = "btn btn-xs btn-info storesystem-edit" })              
            </td>
        </tr>
    }
</table>
<div class="text-right">@Html.PagedListPager(Model, page => Url.Action("StoreSystemListPartial", new { page }))</div>
<script>
    $(function () {
        //页码
        $(".pagination > li > a").click(function () {
            var l = $(this).attr("href");
            var query = $("#offstore-search-query").val();
            l = l + "&query=" + query;
            $.ajax({
                url: l,
                success: function (data) {
                    $("#offstore-list").html(data);
                }
            });
            return false;
        });
        //修改渠道信息
        $(".storesystem-edit").click(function () {
            var url = $(this).attr("href")
            var head = "修改渠道信息"
            $.ajax({
                url: url,
                success: function (data) {
                    $(".modal-con").html(data);
                    $(".modal-box").modal();
                    $(".modal-head").text(head)
                }
            });
            return false;
        });
