                                    },
                                    labels: {
                                        enabled: false
                                    },
                                }, {
                                    title: {
                                        text: '',
                                    },
                                    labels: {
                                        enabled: false
                                    },
                                }, ],
                                tooltip: {
                                    shared: true,
                                    enabled: false
                                },
                                legend: {
                                    itemMarginTop: 3,
                                    itemMarginBottom: 10
                                },
                                plotOptions: {
                                    column: {
                                        pointPadding: 0.2,
                                        borderWidth: 0,
                                    },
                                    spline: {
                                        dataLabels: {
                                            enabled: true
                                        },
                                        enableMouseTracking: false
                                    },
                                
                                    series: {
                                        showCheckbox: true,
                                        events: {
                                            checkboxClick: function (event) {
                                                if (event.checked == true) {
                                                    this.show();
                                                    //alert(this.name)                                                    
                                                }
                                                else {
                                                    this.hide();
                                                }
                                            },
                                            legendItemClick: function (event) {//return false 即可禁用LegendIteml，防止通过点击item显示隐藏系列
                                                return false;
                                            }
                                        }
                                    },
                                },
                                series: [{
                                    name: '运费',
                                    color: '#d7e633',
                                    yAxis:6,
                                    data: delivery_amount,
                                    visible: false//默认不显示
                                }, {
