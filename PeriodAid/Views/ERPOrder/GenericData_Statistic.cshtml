                                    name: '访客数',
                                    color: '#db33e6',
                                    yAxis: 1,
                                    data: uv,
                                    visible: false//默认不显示
                                }, {
                                    name: '转化率',
                                    color: '#33e687',
                                    yAxis: 4,
                                    data: convertion,
                                    visible: false//默认不显示
                                }, {
                                    name: '客单价',
                                    color: '#90e633',
                                    yAxis: 5,
