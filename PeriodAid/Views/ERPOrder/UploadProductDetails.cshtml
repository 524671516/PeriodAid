
@{
    ViewBag.Title = "UploadProductDetails";
    Layout = "~/Views/ERPOrder/_ERPOrder_Layout.cshtml";
    ViewBag.page = 2;
}

<br />
<h4><b>上传产品明细销售数据表</b></h4>
<div class="row">
    @using (Html.BeginForm("UploadProductDetails", "ERPOrder", FormMethod.Post, new { enctype = "multipart/form-data", id = "file-form" }))
    {
        <div class="col-xs-4">
            <div class="input-group">
                <input type="file" name="xlsxfile" id="xlsxfile" class="form-control input-sm" accept=".xlsx" />
                <span class="input-group-btn">
                    <button class="btn btn-success btn-sm" id="rev">上传</button>
                </span>
            </div>
        </div>
        <div class="col-xs-8">
            <a class="btn btn-info btn-sm" href="~/Content/xlsx/产品销售明细表-Template.xlsx">下载模板</a>
        </div>
    }
</div>
<script>
    $("#rev").click(function () {
        if ($("#xlsxfile").val() =="") {
            alert("无文件上传")
        }
        else {
            $("#file-form").submit();
        }
        return false;
    })

</script>

