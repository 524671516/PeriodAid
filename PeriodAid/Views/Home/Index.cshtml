@using PeriodAid.Models
@model LoginViewModel
@{
    Layout = null;
    ViewBag.Title = "Home Page";
}
<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>线下销售系统</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="~/Content/font-awesome.min.css" rel="stylesheet" />
    <link href="~/Content/font-awesome-ie7.min.css" rel="stylesheet" />
    <link href="~/Content/jquery-ui.min.css" rel="stylesheet" />

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    <link href="~/Content/bootstrap-switch.min.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-ui.min.js"></script>
</head>
<body class="reset" style="background-color:grey;">
    <div class="container" style="position:relative">
        <div class="row">
            <div class="col-md-3" style="background-color:white;opacity:0.9;position:fixed;left:37.5%;top:32.5%;">
                <section>
                    @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                    {
                        @Html.AntiForgeryToken()
                        <form class="form-horizontal">
                            <div class="modal-header container">
                                <h3 class="modal-title col-md-6"><strong>用户登录</strong></h3>
                                <div class="col-md-offset-5 text-right" style="margin-top:8px;">
                                    <a href="Account/Register">注册为新用户</a>
                                    @*@Html.ActionLink("注册为新用户", "Register")*@
                                </div>
                            </div>
                            <br />
                            <div class="row">
                                <div class="input-group col-md-10 col-md-offset-1">
                                    <div class="input-group-addon">
                                        <span class="glyphicon glyphicon-user" aria-hidden="true"></span>
                                    </div>
                                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "用户账号" })
                                </div>
                            </div>
                            @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger col-md-offset-2" })
                            <br />
                            <div class="row">
                                <div class="input-group col-md-10 col-md-offset-1">
                                    <div class="input-group-addon">
                                        <span class="glyphicon glyphicon-lock" aria-hidden="true"></span>
                                    </div>
                                    @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "密码" })
                                </div>
                            </div>
                            @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger col-md-offset-2" })
                            <div class="form-group">
                                <div class="col-md-offset-2 col-md-10">
                                    <div class="checkbox">
                                        @Html.CheckBoxFor(m => m.RememberMe)
                                        @Html.LabelFor(m => m.RememberMe)
                                        <a href="javascript:;" class="col-md-offset-4 elseLogin">忘记密码？</a>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group container">
                                <div class="col-md-4 col-md-offset-4"><button type="submit" value="登录" class="btn btn-success btn-block">登录</button></div>
                            </div>
                            @* 在为密码重置功能启用帐户确认后启用此项
                                <p>
                                    @Html.ActionLink("忘记了密码?", "ForgotPassword")
                                </p>*@
                        </form>
                    }
                </section>
            </div>
        </div>
    </div>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/Scripts/jquery.form.min.js"></script>

</body>
</html>