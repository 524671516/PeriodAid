
@{
    ViewBag.Title = "generateQRCode";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>生成二维码</h2>
<br />
<div class="container text-center">
    <div class="row">
        <div class="col-md-9">
            <textarea type="text" class="form-control" rows="5" id="url" name="url"></textarea>
            <br />
            <input type="submit" class="btn btn-default" href="javascript:void(0);" id="submit-btn" value="生成二维码" />
        </div>
        <div class="col-md-3">
            <img src="/Content/images/defqr_dd81ccc.png" id="qrimage" alt="在线二维码生成器" class="img-responsive img-rounded img-thumbnail">
            
        </div>
    </div>
</div>
@section scripts{
    <script>
        $("#submit-btn").click(function () {
            var url = "/Home/ajax_generateQRCode?url="+$("#url").val();
            $("#qrimage").attr("src", url);
        });
    </script>
    }

