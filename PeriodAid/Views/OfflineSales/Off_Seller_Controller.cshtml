<div class="row">
    <div class="col-xs-10">
        <a class="btn btn-default btn-sm" href="/OfflineSales/UploadSeller"><i class="fa fa-upload"></i>&nbsp;&nbsp;上传促销员信息</a>
        <a class="btn btn-info btn-sm" href="/OfflineSales/Off_Seller_main"><i class="fa fa-search"></i>&nbsp;&nbsp;查看促销员</a>
        <button class="btn btn-default btn-sm"><i class="fa fa-download"></i>&nbsp;&nbsp;下载考勤数据</button>
        <button class="btn btn-default btn-sm" id="download-salary"><i class="fa fa-download"></i>&nbsp;&nbsp;下载工资数据</button>
        <a class="btn btn-sm btn-default" href="/OfflineSales/Off_BindSeller_List"><i class="fa fa-retweet"></i>&nbsp;&nbsp;绑定促销员</a>
    </div>
    <div class="col-xs-2">
        <div class="input-group">
            <input type="text" class="form-control input-sm" placeholder="搜索销售员" id="search-query">
            <span class="input-group-btn">
                <button class="btn btn-default btn-sm" type="button" id="search-btn"><i class="fa fa-search"></i></button>
            </span>
        </div>
    </div>
</div>
<div class="modal fade" id="downloadModal">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title">下载工资数据表</h4>
            </div>
            <div class="modal-body">
                <div class="container">
                    <form class="form-inline">
                        <div class="form-group">
                            <label for="start-date" class="sr-only">开始时间</label>
                            <input type="text" id="start-date" class="form-control input-sm" placeholder="开始时间" />
                        </div>
                        <div class="form-group">
                            <label for="end-date" class="sr-only">开始时间</label>
                            <input type="text" id="end-date" class="form-control input-sm" placeholder="结束时间" />
                        </div>
                        <button type="submit" class="btn btn-default btn-sm" id="download-submit"><i class="fa fa-download"></i>&nbsp;&nbsp;下载</button>
                    </form><br />
                </div>
            </div>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div>
<script>
    $(function () {
        $("#start-date").datepicker();
        $("#end-date").datepicker();
        $("#download-salary").click(function () {
            $("#downloadModal").modal();
        });
        $("#download-submit").click(function () {
            var start = $("#start-date").val();
            var end = $("#end-date").val();
            $("#start-date").val("");
            $("#end-date").val("");
            window.location.href = "/OfflineSales/Ajax_DownloadSalary?start=" + start + "&end=" + end;
            return false;
        });
    });
</script>
