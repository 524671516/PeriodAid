
@{
    ViewBag.Title = "Off_CheckIn_List";
    Layout = "~/Views/Shared/_OffLayout.cshtml";
}
@section page{
    5
    }
@model PagedList.IPagedList<PeriodAid.Models.Off_Checkin>
@using PagedList.Mvc;
@using PeriodAid.Models
<div class="row">
    <div class="col-md-8">
        <ul class="nav nav-tabs">
            <li role="presentation"><a class="btn-filter btn" data-rel="0">未签到</a></li>
            <li role="presentation"><a class="btn-filter btn" data-rel="1">已签到</a></li>
            <li role="presentation"><a class="btn-filter btn" data-rel="2">已签退</a></li>
            <li role="presentation"><a class="btn-filter btn" data-rel="3">已提报</a></li>
            <li role="presentation" class="active"><a class="btn-filter btn" data-rel="4">已确认</a></li>
            <li role="presentation"><a class="btn-filter btn" data-rel="5">已结算</a></li>
            <li role="presentation"><a class="btn-filter btn" data-rel="-1">作废</a></li>
        </ul>
    </div>
    <div class="col-md-4">
        <div class="input-group">
            <input type="text" class="form-control input-sm" placeholder="销售查询" id="search-query">
            <span class="input-group-btn">
                <button class="btn btn-default btn-sm" type="button" id="search-btn"><i class="fa fa-search"></i></button>
            </span>
        </div>
    </div>
</div><br />
<div class="container-fluid" id="expenseslist">
    
</div>
<input type="hidden" id="status-val" />
@section scripts{
    <script>       
        $(function () {
            $.ajax({
                url: "/OfflineSales/Off_CheckIn_List_ajax",
                success: function (data) {
                    $("#expenseslist").html(data);                    
                }
            });            
            $(document).delegate(".cancel-btn", "click", function () {
                var cfm = confirm("确认要删除信息吗？");
                if (cfm) {
                    var link_url = $(this).attr("href");
                    $.ajax({
                        url: link_url,
                        type: "post",
                        success: function (data) {
                            if (data == "SUCCESS") {
                                $.ajax({
                                    url: "/OfflineSales/Off_CheckIn_List_ajax",
                                    data:{
                                        status: $("#status-val").val(),
                                        query: $("#search-query").val()
                                    },
                                    success: function (data) {
                                        $("#expenseslist").html(data);
                                    }
                                });
                            }
                            else if(data == "FAIL"){
                                window.location.reload();
                            }
                        }
                    });
                }
                return false;
            });
        });
        $(".btn-filter").click(function () {
            $("#status-val").val($(this).attr("data-rel"));
            $(this).parent("li").addClass("active").siblings().removeClass("active");           
            if ($("#status-val").val() == 4) {
                $.ajax({
                    url: "/OfflineSales/Off_CheckIn_List_ajax?status=" + 4,
                    success: function (data) {
                        $("#expenseslist").html(data);
                        $(".btn-sure").show();
                        $(".check-show").show();
                    }
                });
            } else if ($("#status-val").val() == 5) {
                $.ajax({
                    url: "/OfflineSales/Off_CheckIn_List_ajax?status=" + 5,
                    success: function (data) {
                        $("#expenseslist").html(data);
                        $(".btn-sure").show();
                        $(".check-show").show();
                    }
                });
            } else {
                $.ajax({
                    url: "/OfflineSales/Off_CheckIn_List_ajax?status=" + $("#status-val").val(),
                    success: function (data) {
                        $("#expenseslist").html(data);
                        $(".btn-sure").hide();
                        $(".check-show").hide();
                    }
                });
            }
            return false;
        });
        $("#search-btn").click(function () {           
            var url = "/OfflineSales/Off_CheckIn_List_ajax"
            $.ajax({
                url: url,
                data:{
                    status: $("#status-val").val(),
                    query:$("#search-query").val()
                },
                success: function (data) {
                    $("#expenseslist").html(data);
                }
            })
        })
    </script>
}
