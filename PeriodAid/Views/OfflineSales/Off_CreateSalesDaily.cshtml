@model PeriodAid.Models.Off_SalesInfo_Daily

@using (Html.BeginForm("Off_CreateSalesDaily","OfflineSales", FormMethod.Post, new { id = "ajaxaddForm" }))
{
                @Html.AntiForgeryToken()

