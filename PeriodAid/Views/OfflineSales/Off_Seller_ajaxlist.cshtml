@model PagedList.IPagedList<PeriodAid.Models.Off_Seller>
@using PagedList.Mvc;

<a class="btn btn-info btn-sm" id="add-btn"><i class="fa fa-plus"></i>&nbsp;&nbsp;新增促销员信息</a>
<a class="btn btn-info btn-sm" href="/OfflineSales/UploadSeller" style="margin-left:5px;"><i class="fa fa-upload"></i>&nbsp;&nbsp;上传促销员信息</a>
<br /><br />
<table class="table table-condensed table-striped">
    <tr>
        <th>
            ID
        </th>
        <th>
            姓名
        </th>
        <th>
            联系电话
        </th>
        <th>
            所属店铺
        </th>
        <th>
            开户行
        </th>
        <th>操作</th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.Encode(item.Id)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Mobile)
        </td>
        <td>
            @item.Off_Store.StoreName
        </td>
        <td>@Html.DisplayFor(modelItem => item.CardName)</td>
        <td>
            @Html.ActionLink("修改", "Ajax_EditSeller", new { id = item.Id }, new { @class = "btn btn-sm btn-info edit-button" })
            <a class="btn btn-sm btn-danger btn-lg del" href="/OfflineSales/Off_DeleteSeller?id=@item.Id">删除</a>
        </td>
    </tr>
}

</table>
<div class="text-right">@Html.PagedListPager(Model, page => Url.Action("Off_Seller_ajaxlist", new { page , query=""}))</div>

<div class="modal fade" id="myModal" >
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title">修改促销员</h4>
            </div>
            <div class="modal-body" id="editcontent">
                
            </div>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div><!-- /.modal -->
<div class="modal fade" id="addModal">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title">添加促销员</h4>
            </div>
            <div class="modal-body" id="addcontent">

            </div>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div><!-- /.modal -->
<script src="~/Scripts/jquery.form.min.js"></script>
<script>
    $(function () {
        $(".pagination > li > a").click(function () {
            var l = $(this).attr("href");
            var query = $("#search-query").val();
            l = l + "&query=" + query;
            $.ajax({
                url: l,
                success: function (data) {
                    $("#list-container").html(data);
                }
            });
            return false;
        });
        $(".edit-button").click(function () {
            var link_url = $(this).attr("href");
            $.ajax({
                url: link_url,
                success: function (data) {
                    $("#editcontent").html(data);
                    $('#myModal').modal()
                }
            });
            return false;
        });
        $("#add-btn").click(function () {
            var link_url = "/OfflineSales/Ajax_AddSeller";
            $.ajax({
                url: link_url,
                success: function (data) {
                    $("#addcontent").html(data);
                    $('#addModal').modal()
                }
            });
            return false;
        });
        $(".del").click(function () {
            var result = confirm("确定删除促销员信息吗？")
            if (result) {
                var url = $(this).attr("href")
                $.ajax({
                    url: url,
                    type: "post",
                    success:function(data){
                        if(data=="SUCCESS"){
                            window.location.reload();
                        } else if (data == "FAIL") {
                            alert("删除错误");
                        }
                    }
                })
            }
            return false;
        })
        
    });
</script>