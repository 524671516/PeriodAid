@model PagedList.IPagedList<PeriodAid.Models.Off_SalesInfo_Daily>
    @using PagedList.Mvc;

<a class="btn btn-info btn-sm" id="add-btn"><i class="fa fa-plus"></i>&nbsp;&nbsp;新增报表</a><br /><br />
<table class="table table-condensed table-striped" style="table-layout: fixed;width:100%;">
    <tr>
        <th style="width:10%">
            日期
        </th>
        <th style="width:15%">
            门店名称
        </th>
        <th style="width:7%">
            红糖
        </th>
        <th style="width:7%">
            黑糖
        </th>
        <th style="width:7%">
            柠檬
        </th>
        <th style="width:7%">
            蜂蜜
        </th>
        <th style="width:7%">
            红枣
        </th>
        <th style="width:7%">
            销售员姓名
        </th>
        <th style="width:7%">工资</th>
        <th style="width:7%">奖金</th>
        <th style="width:7%">扣款</th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td class="ellipsis">
            @Html.DisplayFor(modelItem => item.Date)
        </td>
        <td class="ellipsis">
            @Html.DisplayFor(modelItem => item.Off_Store.StoreName)
        </td>
        <td class="ellipsis">
            @Html.DisplayFor(modelItem => item.Item_Brown)
        </td>
        <td class="ellipsis">
            @Html.DisplayFor(modelItem => item.Item_Black)
        </td>
        <td class="ellipsis">
            @Html.DisplayFor(modelItem => item.Item_Lemon)
        </td>
        <td class="ellipsis">
            @Html.DisplayFor(modelItem => item.Item_Honey)
        </td>
        <td class="ellipsis">
            @Html.DisplayFor(modelItem => item.Item_Dates)
        </td>
        <td class="ellipsis">
            @Html.DisplayFor(modelItem => item.Off_Seller.Name)
        </td>
        <td class="ellipsis">
            @Html.DisplayFor(modelItem => item.Salary)
        </td>
        <td class="ellipsis">
            @Html.DisplayFor(modelItem => item.Bonus)
        </td>
        <td class="ellipsis">
            @Html.DisplayFor(modelItem => item.Debit)
        </td>
        <td class="ellipsis">
            @Html.ActionLink("修改","Ajax_EditDailyInfo", new { id= item.Id}, new { @class="btn btn-info btn-sm edit-button"})
            <button type="button" id="del-btn" class="btn btn-danger btn-sm btn-lg">删除</button>
        </td>
    </tr>
}

</table>
<div class="text-right">@Html.PagedListPager(Model, page => Url.Action("Off_DailySalesInfo_ajaxlist", new { page }))</div>
<div class="modal fade" id="myModal">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title">修改报表</h4>
            </div>
            <div class="modal-body" id="editcontent">

            </div>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div><!-- /.modal -->
<div class="modal fade" id="addModal">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title">新增报表</h4>
            </div>
            <div class="modal-body" id="addcontent">

            </div>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div><!-- /.modal -->
<script src="~/Scripts/jquery.form.min.js"></script>
<script>
    $(function () {
        $(".pagination > li > a").click(function () {
            var l = $(this).attr("href");
            var query = $("#search-query").val();
            l = l + "&query=" + query;
            $.ajax({
                url: l,
                success: function (data) {
                    $("#list-container").html(data);
                }
            });
            return false;
        });
        $(".edit-button").click(function () {
            var link_url = $(this).attr("href");
            $.ajax({
                url: link_url,
                success: function (data) {
                    $("#editcontent").html(data);
                    $('#myModal').modal()
                }
            });
            return false;
        });
        $("#add-btn").click(function () {
            var link_url = "/OfflineSales/Off_CreateSalesDaily"
            $.ajax({
                url: link_url,
                success: function (data) {
                    $("#addcontent").html(data);
                    $("#addModal").modal()
                }
            });
            return false

        })
        $("#del-btn").click(function () {
            var result = confirm("是/否")
            if (result) {
                alert("success")
                window.location.reload();
            }
        })
    });
</script>
