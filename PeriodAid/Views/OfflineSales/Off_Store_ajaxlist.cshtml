@model PagedList.IPagedList<PeriodAid.Models.Off_Store>
@using PagedList.Mvc;

<ul class="list-inline list-unstyled">
    <li><a class="btn btn-default btn-sm" id="EditSel">批量选择</a></li>
    <li><a class="btn btn-default btn-sm" id="DelSel">删除信息</a></li>
</ul>
    <table class="table table-condensed table-striped" style="table-layout: fixed;width:100%;">
        <tr>
            <th style="width:5%" class="check-show">
                <input type="checkbox" id="allChk" />
            </th>
            <th style="width:15%">
                门店名称
            </th>
            <th style="width:5%">
                区域
            </th>
            <th style="width:10%">
                经销商
            </th>
            <th style="width:30%">
                地址
            </th>
            <th style="width:10%">
                经度
            </th>
            <th style="width:10%">
                纬度
            </th>
            <th style="width:15%"></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td class="check-show">
                    <input type="checkbox" name="subChk" value="@item.Id" />
                </td>
                <td class="ellipsis">
                    @Html.DisplayFor(modelItem => item.StoreName)
                </td>
                <td class="ellipsis">
                    @Html.DisplayFor(modelItem => item.Region)
                </td>
                <td class="ellipsis">
                    @Html.DisplayFor(modelItem => item.Distributor)
                </td>
                <td class="ellipsis">
                    @Html.DisplayFor(modelItem => item.Address)
                </td>
                <td class="ellipsis">
                    @Html.DisplayFor(modelItem => item.Longitude)
                </td>
                <td class="ellipsis">
                    @Html.DisplayFor(modelItem => item.Latitude)
                </td>
                <td>
                    @Html.ActionLink("修改", "Ajax_EditStore", new { id = item.Id }, new { @class = "btn btn-sm btn-info edit-button" })
                    <a class="btn btn-sm btn-danger btn-lg del-btn" href="/OfflineSales/Off_DeleteStore?id=@item.Id">删除</a>
                    @*@Html.ActionLink("删除", "", new { id = off }, new { @class = "btn btn-sm btn-danger edit-button" })*@
                </td>

            </tr>
        }

    </table>
<div class="text-right">@Html.PagedListPager(Model, page => Url.Action("Off_Store_ajaxlist", new { page }))</div>
<div class="modal fade" id="myModal">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title">修改店铺信息</h4>
            </div>
            <div class="modal-body" id="editcontent">

            </div>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div><!-- /.modal -->
<div class="modal fade" id="addModal">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title">门店信息</h4>
            </div>
            <div class="modal-body" id="addcontent">
                
            </div>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div><!-- /.modal -->
