@{
    Layout = "~/Views/Shared/_SalesProcessLayout.cshtml";
}
<table class="offline-search-box">
    <tr>
        <td class="pull-right">
            <label>联系人信息：</label>
            <input class="form-control input-sm offline-search-inline" id="contact-query" placeholder="搜索内容" />
            <a class="btn btn-info btn-sm" id="contact-search"><i class="fa fa-search"></i>&nbsp;&nbsp;搜索</a>
        </td>
    </tr>
</table>
<h3 class="text-center">@ViewBag.ClientName.Client_Name<span class="h3">(@ViewBag.ClientName.Client_Area)</span></h3>
<a class="btn btn-info btn-sm" id="add-contact" style="margin-bottom:18px;"><i class="fa fa-plus"></i>&nbsp;&nbsp;新增联系人信息</a>
<ol class="breadcrumb" style="padding:0;margin:0">
    <li>当前位置：/&nbsp;<a href="/SalesProcess/ClientList">&nbsp;经销商</a></li>
    <li class="active">联系人</li>
</ol>
<div id="contact_list_content"></div>
@section scripts{
    <script>
        $(function () {
            $.ajax({
                url: "/SalesProcess/ContactListPartial",
                data: {
                    clientId: getUrlParam("clientId"),
                    page: 1,
                    query: $("#contact-query").val(),
                },
                success: function (data) {
                    $("#contact_list_content").html(data)
                }
            });
        })
        // 搜索
        $("#contact-search").on("click", function () {
            $.ajax({
                url: "/SalesProcess/ContactListPartial",
                data:{
                    clientId: getUrlParam("clientId"),
                    page: 1,
                    query: $("#contact-query").val(),
                },
                success: function (data) {
                    $("#contact_list_content").html(data)
                }
            })
        })
        // 添加
        $("#add-contact").on("click", function () {
            $.ajax({
                url: '/SalesProcess/AddContactPartial',
                data: {
                    clientId: getUrlParam("clientId")
                },
                success: function (data) {
                    $('#modal-content').html(data)
                    $("#myModal").modal('show')
                }
            })
        })
    </script>
    
    }