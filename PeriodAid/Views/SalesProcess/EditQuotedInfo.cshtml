@model PeriodAid.Models.SP_Quoted
<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
    <h2>修改报价单信息</h2>
</div>
<div class="hidden" id="salessystem-id">@ViewBag.Quoted.SalesSystem_Id</div>
<div class="hidden" id="salessystem-name">@ViewBag.Quoted.SP_SalesSystem.System_Name</div>
<div class="modal-body" id="modal-body">
    @using (Html.BeginForm("EditQuotedInfo", "SalesProcess", FormMethod.Post, new { @id = "quoted-form" }))
    {
        @Html.AntiForgeryToken();
        <div class="form-horizontal">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.Id)

            <div class="form-group">
                <label class="control-label col-md-2">报价日期</label>
                <div class="col-md-10">
                    <div id="show-date">
                        @Html.EditorFor(model => model.Quoted_Date, new { htmlAttributes = new { @class = "form-control"} })
                    </div>
                    @Html.ValidationMessageFor(model => model.Quoted_Date, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-md-2">报价单号</label>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Quotation_Num, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Quotation_Num, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-md-2">备注</label>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Remark, new { htmlAttributes = new { @class = "form-control"} })
                    @Html.ValidationMessageFor(model => model.Remark, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-2">店铺名称</label>
                <div class="col-md-10">
                    <input id="salessystem-input" type="text" class="span4 form-control" autocomplete="off" name="salessystem-input" readonly="readonly" />
                    <input type="hidden" id="salessystemId" name="SalesSystem_Id" />
                    @Html.ValidationMessageFor(model => model.SalesSystem_Id, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="button" value="保存" id="save-btn" class="btn btn-default" />
                </div>
            </div>

        </div>
    }
</div>
<script src="~/Scripts/kalendae.standalone.js"></script>
<script>

    $("#save-btn").on("click", function () {
        if (!$(this).hasClass("disabled")) {
            $(this).addClass("disabled")
            $("#quoted-form").submit();
        }
    });
        //新建项目表单验证   详细用法请查看validate插件
