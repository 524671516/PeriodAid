@{
    ViewBag.Title = "OrderList";
    Layout = "~/Views/Shared/_SalesProcessLayout.cshtml";
}
<table class="offline-search-box">
    <tr>
        <td class="pull-right">
            <label>订单信息：</label>
            <input class="form-control input-sm offline-search-inline" id="order-query" placeholder="搜索内容" />
            <a class="btn btn-info btn-sm" id="order-search"><i class="fa fa-search"></i>&nbsp;&nbsp;搜索</a>
        </td>
    </tr>
</table>
<a class="btn btn-info btn-sm" id="add-order" style="margin-bottom:18px;"><i class="fa fa-plus"></i>&nbsp;&nbsp;新增订单</a>

<ol class="breadcrumb">
    当前位置：
    <li class="active">订单管理</li>
    <li class="backBtn"><a style="cursor:pointer" onclick="backBtn()">返回上一页</a></li>
</ol>
<ul class="nav nav-tabs" role="tablist">
    <li role="presentation" class="order-list-li active"><a aria-controls="home" role="tab" data-toggle="tab" data-id="-1" class="type-btn" style="cursor:pointer">待审核订单</a></li>
    <li role="presentation" class="order-list-li"><a aria-controls="home" role="tab" data-toggle="tab" data-id="0" class="type-btn" style="cursor:pointer">已审核订单</a></li>
</ul>
<div id="order_list_content"></div>
@section scripts{
    <script>
        $(function () {
            if (getUrlParam("clientId") == null) {
                $(".backBtn").hide()
            } else {
                $(".backBtn").show()
            }
            $.ajax({
                url: "/SalesProcess/OrderListPartial",
                data: {
                    query: $("#order-query").val(),
                    clientId: getUrlParam("clientId"),
                    orderType: $(".order-list-li.active").children(".type-btn").attr("data-id")
                },
                success: function (data) {
                    $("#order_list_content").html(data)
                }
            })
            
        })
        // 添加
        $("#add-order").click(function () {
            $(this).attr("href", "/SalesProcess/AddOrder")
        })
        // 切换
        $(".order-list-li").on("click", function () {
            $.ajax({
                url: "/SalesProcess/OrderListPartial",
                data: {
                    query: $("#order-query").val(),
                    clientId: getUrlParam("clientId"),
                    orderType: $(this).children(".type-btn").attr("data-id")
                },
                success: function (data) {
                    $("#order_list_content").html(data)
                }
            })
        })


