@{
    ViewBag.Title = "OrderList";
    Layout = "~/Views/Shared/_SalesProcessLayout.cshtml";
}
<table class="offline-search-box">
    <tr>
        <td class="pull-right">
            <label>订单号：</label>
            <input class="form-control input-sm offline-search-inline" id="order-query" placeholder="搜索内容" />
            <a class="btn btn-info btn-sm" id="order-search"><i class="fa fa-search"></i>&nbsp;&nbsp;搜索</a>
        </td>
    </tr>
</table>
<a class="btn btn-info btn-sm" id="add-order" style="margin-bottom:18px;"><i class="fa fa-plus"></i>&nbsp;&nbsp;新增订单</a>
<div id="order_list_content"></div>
@section scripts{
    <script>
        $(function () {
            $.ajax({
                url: "/SalesProcess/OrderListPartial",
                data: {
                    query:$("#order-query").val()
                },
                success: function (data) {
                    $("#order_list_content").html(data)
                }
            })
        })
        // 添加
        $("#add-order").on("click", function () {
            $.ajax({
                url: '/SalesProcess/AddOrderPricrPartial',
                data: {
                },
                success: function (data) {
                    $('#modal-content').html(data)
                    $("#myModal").modal('show')
                }
            })
        })
        // 搜索
        $("#order-search").on("click", function () {
            $.ajax({
                url: "/SalesProcess/OrderListPartial",
                data: {
                    query: $("#order-query").val()
                },
                success: function (data) {
                    $("#order_list_content").html(data)
                }
            })
        })
    </script>
    
    }