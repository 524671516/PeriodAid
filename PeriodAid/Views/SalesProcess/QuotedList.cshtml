
@{
    ViewBag.Title = "QuotedList";
    Layout = "~/Views/Shared/_SalesProcessLayout.cshtml";
}
<table class="offline-search-box">
    <tr>
        <td class="pull-right">
            <label>报价单号：</label>
            <input class="form-control input-sm offline-search-inline" id="quoted-query" placeholder="搜索内容" />
            <a class="btn btn-info btn-sm" id="quoted-search"><i class="fa fa-search"></i>&nbsp;&nbsp;搜索</a>
        </td>
    </tr>
</table>
<h3 class="text-center">@ViewBag.Sales.System_Name</h3>
<a class="btn btn-info btn-sm" id="add-quoted" style="margin-bottom:18px;"><i class="fa fa-plus"></i>&nbsp;&nbsp;新增报价单信息</a>
<div id="quoted_list_content"></div>
@section scripts{
    <script>
        $(function () {
            $.ajax({
                url: "/SalesProcess/QuotedListPartial",
                data: {
                    query: $("#quoted-query").val(),
                    SalesSystemId: getUrlParam('SalesSystemId')
                },
                success: function (data) {
                    $("#quoted_list_content").html(data)
                }
            });
        });
        //新增
        $("#add-quoted").on("click", function () {
            $.ajax({
                url: '/SalesProcess/AddQuotedPartial',
                data: {
                    SalesSystemId: getUrlParam('SalesSystemId')
                },
                success: function (data) {
                    $('#modal-content').html(data)
                    $("#myModal").modal('show')
                }
            })
        })
        //搜索
        $("#quoted-search").click(function () {
            $.ajax({
                url: "/SalesProcess/QuotedListPartial",
                data: {
                    SalesSystemId: getUrlParam('SalesSystemId'),
                    query: $("#quoted-query").val()
                },
                success: function (data) {
                    $("#quoted_list_content").html(data);
                }
            })
        });
    </script>
}
