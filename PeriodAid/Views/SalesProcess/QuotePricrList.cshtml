@{
    Layout = "~/Views/Shared/_SalesProcessLayout.cshtml";
}
<table class="offline-search-box">
    <tr>
        <td class="pull-right">
            <label>产品名称：</label>
            <input class="form-control input-sm offline-search-inline" id="quotePrice-query" placeholder="搜索内容" />
            <a class="btn btn-info btn-sm" id="quotePrice-search"><i class="fa fa-search"></i>&nbsp;&nbsp;搜索</a>
        </td>
    </tr>
</table>
<a class="btn btn-info btn-sm" id="add-quotePrice" style="margin-bottom:18px"><i class="fa fa-plus"></i>&nbsp;&nbsp;新增报价信息</a>
@*<a class="btn btn-danger btn-sm float-left" style="margin-left:10px" role="button" id="price_btn" href="javascript:;">生成报价单</a>*@
@*<form method="post" id="price_form"></form>*@
<ol class="breadcrumb" style="">
    当前位置：
    <li><a href="/SalesProcess/SalesList" >渠道管理</a></li>
    <li class="active">报价信息</li>
</ol>
<div id="quotePrice_list_content"></div>
@section scripts{
    <script>
        $(function () {
            $.ajax({
                url: "/SalesProcess/QuotePricrListPartial",
                data: {
                    query: $("#quotePrice-query").val(),
                    SalesSystemId: getUrlParam('SalesSystemId')
                },
                success: function (data) {
                    $("#quotePrice_list_content").html(data)
                }
            });
        });
        //新增
        $("#add-quotePrice").on("click", function () {
            $.ajax({
                url: '/SalesProcess/AddQuotePricrPartial',
                data: {
                    SalesSystemId: getUrlParam('SalesSystemId')
                },
                success: function (data) {
                    $('#modal-content').html(data)
                    $("#myModal").modal('show')
                }
            })
        })
        //搜索
        $("#quotePrice-search").click(function () {
            $.ajax({
                url: "/SalesProcess/QuotePricrListPartial",
                data: {
                    query: $("#quotePrice-query").val(),
                    SalesSystemId: getUrlParam('SalesSystemId')
                },
                success: function (data) {
                    $("#quotePrice_list_content").html(data);
                }
            })
        });
        // 下载
        $("#price_btn").on("click", function () {
            $.ajax({
                url: "/SalesProcess/SelectQuotePrice",
                data: {
                    SalesSystemId: getUrlParam('SalesSystemId')
                },
                success: function (data) {
                    $('#modal-content').html(data)
                    $("#myModal").modal('show')
                }
            })
        })
    </script>
}