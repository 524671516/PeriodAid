@model IEnumerable<PeriodAid.Models.CRM_Contract>
@{
    Layout = null;
}
<div>
    <table class="table table-hover">
        <tr style="background-color:#f9f9f9">
            <th></th>
            <th>订单号</th>
            <th>客户名称</th>
            <th>联系人</th>
            <th>订单状态</th>
            <th>更新时间</th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <label class="checkbox-custom">
                        <input type="checkbox" class="btn">
                    </label>
                </td>
                <td>@item.contract_id</td>
                <td>@item.customer_name</td>
                <td>@item.customer_id</td>
                <td>@item.status</td>
                <td>@item.updated_at</td>
                <td>
                    <a class="select-a btn btn-xs btn-success" role="button" data-val="@item.Id" style="cursor:pointer" data-toggle="modal" data-target="#myModal">编辑</a>
                    <a class="detail-btn btn btn-xs btn-primary" role="button" data-id="@item.Id" data-toggle="modal" data-target=".bs-example-modal-lg">详情</a>
                    <a class="delete-product btn btn-xs btn-danger" role="button" data-eid="@item.Id">删除</a>
                </td>
            </tr>
        }
    </table>
</div>

<div class="modal fade" id="myModal" style="overflow-x: hidden;overflow-y: auto;" data-backdrop="true" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content" id="modal-content">
        </div>
    </div>
</div>
<div class="modal fade bs-example-modal-lg" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content" id="lg-modal-content">
        </div>
    </div>
</div>
<script>
    $(function () {

    })
</script>