@model PeriodAid.Models.MD_Order
<div>
    <table class="table table-hover">
        <tr style="background-color:#f9f9f9">
            <th>平台单号</th>
            <th>客户名称</th>
            <th>邮寄地址</th>
            <th>未发次数</th>
            <th>发货日期</th>
            <th></th>
        </tr>
        @foreach (var item in ViewBag.Order)
        {
            <tr>
                <td>@item.order_code</td>
                <td>@item.MD_Customer.customer_name</td>
                <td>@item.MD_Customer.customer_address</td>
                <td>0</td>
                <td>@item.receiver_date.ToString("yyyy-MM-dd")</td>
                <td>
                    <a class="btn btn-xs btn-success" role="button" style="cursor:pointer">合并发送</a>
                    <a class="btn btn-xs btn-info" role="button">详情</a>
                    <a class="btn btn-xs btn-danger" role="button">取消发送</a>
                </td>
            </tr>
        }

    </table>
    @*<div class="text-right">
        @Html.PagedListPager(Model, page => Url.Action("CRM_undeliveredPartical", new { page }))
    </div>*@
</div>