@model PeriodAid.Models.MD_Order
<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
    <h2>修改订单信息</h2>
</div>
<div class="hidden" id="orderId_show"></div>
<div class="modal-body" id="modal-body">
    @using (Html.BeginForm("MD_EditOrderInfo", "SalesProcess", FormMethod.Post, new { @id = "order-form" }))
    {
        @Html.AntiForgeryToken();
        <div class="form-horizontal">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.Id)
            <div class="form-group hidden">
                <input id="vip_code" type="text" value="@ViewBag.Order.vip_code" class="form-control" name="vip_code" />
                @Html.ValidationMessageFor(model => model.vip_code, "", new { @class = "text-danger" })
                
                <input id="order_code" type="text" value="@ViewBag.Order.order_code" class="form-control" name="order_code" />
                @Html.ValidationMessageFor(model => model.order_code, "", new { @class = "text-danger" })

                <input id="quantity" type="text" value="@ViewBag.Order.qty" class="form-control" name="quantity" />
                @Html.ValidationMessageFor(model => model.qty, "", new { @class = "text-danger" })

                <input id="parentOrder_id" type="text" value="@ViewBag.Order.parentOrder_id" class="form-control" name="parentOrder_id" />
                @Html.ValidationMessageFor(model => model.parentOrder_id, "", new { @class = "text-danger" })

                <input id="receiver_status" type="text" value="@ViewBag.Order.qty" class="form-control" name="receiver_status" />
                @Html.ValidationMessageFor(model => model.qty, "", new { @class = "text-danger" })

                <input id="order_status" type="text" value="@ViewBag.Order.order_status" class="form-control" name="order_status" />
                @Html.ValidationMessageFor(model => model.order_status, "", new { @class = "text-danger" })

                <input id="receiver_times" type="text" value="@ViewBag.Order.receiver_times" class="form-control" name="receiver_times" />
                @Html.ValidationMessageFor(model => model.receiver_times, "", new { @class = "text-danger" })

                <input id="product_id" type="text" value="@ViewBag.Order.product_id" class="form-control" name="product_id" />
                @Html.ValidationMessageFor(model => model.product_id, "", new { @class = "text-danger" })

                <input id="receiver_address" type="text" value="@ViewBag.Order.receiver_address" class="form-control" name="receiver_address" />
                @Html.ValidationMessageFor(model => model.receiver_address, "", new { @class = "text-danger" })

                <input id="receiver_tel" type="text" value="@ViewBag.Order.receiver_tel" class="form-control" name="receiver_tel" />
                @Html.ValidationMessageFor(model => model.receiver_tel, "", new { @class = "text-danger" })

                <input id="receiver_area" type="text" value="@ViewBag.Order.receiver_area" class="form-control" name="receiver_area" />
                @Html.ValidationMessageFor(model => model.receiver_area, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                <label class="col-md-2 control-label">邮寄日期</label>
                <div class="col-md-10">
                    <input id="receiver_date" type="text" value="@ViewBag.Order.receiver_date.ToString("yyyy-MM-dd")" class="form-control date-readonly order_control" autocomplete="off" name="receiver_date" readonly="readonly" required />
                    @Html.ValidationMessageFor(model => model.receiver_date, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="button" value="保存" id="save-btn" class="btn btn-default" name="save-btn" />
                </div>
            </div>

        </div>
    }
</div>
<script>
    $(function () {
        window.moment = Kalendae.moment;
        var k4 = new Kalendae.Input('receiver_date', {
            months: 1,
            titleFormat: "MM月, YYYY年",
            format: "YYYY-MM-DD"
        });
    })
    $("#save-btn").on("click", function () {
        if (!$(this).hasClass("disabled")) {
            $(this).addClass("disabled")
            $("#order-form").ajaxSubmit({
                url: '/SalesProcess/MD_EditOrderInfo',
                type: 'post',
                success: function (data) {
                    if (data.result == "SUCCESS") {
                        $("#myModal").modal('hide');
                        $.confirm({
                            title: '提示!',
                            content: '保存成功!',
                            type: 'green',
                            buttons: {
                                确定: function () {
                                    $.ajax({
                                        url: "/SalesProcess/MD_OrderDetailPartialView/",
                                        data: {
                                            parentOrder_id: $("#orderId_show").attr("data-id")
                                        },
                                        success: function (data) {
                                            $("#orderdetail_list_content").html(data)
                                            $('.modal-backdrop.in').remove()
                                            $('body').removeClass('modal-open')
                                        }
                                    })
                                },
                            }
                        });
                        
                    } else {
                        errorAlert('保存失败')
                    }
                }
            })
            return false;
        }
    })
</script>
