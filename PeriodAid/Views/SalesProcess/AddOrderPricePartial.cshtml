@model PeriodAid.Models.SP_OrderPrice
    <style>
      .table > tbody > tr > td{
          vertical-align:middle;
      }
    </style>
<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
    <h2>新增订单产品</h2>
</div>
<div id="client_id" class="hidden">@ViewBag.Order.SP_Contact.Client_Id</div>
<div class="modal-body">
    @using (Html.BeginForm("AddOrderPricePartial", "SalesProcess", FormMethod.Post, new { @id = "add-orderPrice-form" }))
    {
        @Html.AntiForgeryToken()
        <div class="form-horizontal">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="hidden">
                <input type="text" value="@ViewBag.Order.Id" name="Order_Id" />
                @Html.ValidationMessageFor(model => model.Order_Id, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                <label class="control-label col-md-2">订货信息</label>
                <div class="col-md-9">
                    <table class="table-striped table table-bordered" style="margin-bottom:0" id="productdetails">
                        <tr>
                            <th class="col-md-2 text-center">商品名称</th>
                            <th class="col-md-2 text-center">数量</th>
                            <th class="col-md-2 text-center">价格</th>
                            <th class="col-md-2 text-center">总价</th>
                            <th class="col-md-2 text-center">折扣价</th>
                            <th class="col-md-2 text-center">备注</th>
                        </tr>
                    </table>
                </div>      
            </div>
            <div class="form-group">
                <label class="control-label col-md-2">添加产品</label>
                <div class="col-md-8">
                    <input id="product_input" type="text" class="span4 form-control" placeholder="商品名称" autocomplete="off" name="product_input" />
                    <input type="hidden" id="ProductId" name="Product_Id" />
                </div>
                <div class="col-md-2">
                    <a href="javascript:;" class="btn btn-default" id="add-product"><i class="fa fa-plus" aria-hidden="true"></i></a>
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-9">
                    <input type="submit" value="新增" class="btn btn-default" id="add-submit" name="add-submit" />
                </div>
            </div>
        </div>
    }
</div>
<script>
    // 搜索产品
    function displayResult(item, val, text) {
        $("#ProductId").val(val);
        $("#product_input").attr("data-pid",val)
    }
    $('#product_input').typeahead({
        ajax: {
            url: "/SalesProcess/QueryProduct",
            triggerLength: 1,
        },
        itemSelected: displayResult,
        display: 'ProductName',
        val: 'Id',
    });
    $("#add-product").click(function () {
            var that = $(this)
            var select_item = $("#product_input");
            var P_Id = $("#ProductId").val();
            if (select_item.val() != "") {
                if (select_item.val() != $("#prodcuct_name").html()) {
                    $.ajax({
                        url: "/SalesProcess/AllPriceAjax",
                        type: "post",
                        data: {
                            productId: select_item.attr("data-pid"),
                            clientId: $("#client_id").html()
                        },
                        success: function (data) {
                            if (data.result == "SUCCESS") {
                                $("#productdetails").append("<tr><td class='text-center' id='prodcuct_name'>" + select_item.val() + "</td><td><input class='form-control input-sm' required='required' type='number' placeholder='数量' name='order_" + P_Id + "' id='order_" + P_Id + "' /></td><td><input class='form-control input-sm' required='required' type='number' name='price_" + P_Id + "' id='price_" + P_Id + "' /></td><td><input class='form-control input-sm' type='number' placeholder='总价' name='totalPrice_" + P_Id + "' id='totalPrice_" + P_Id + "' /></td><td><input class='form-control input-sm' type='number' placeholder='折扣价' required='required' name='discount_" + P_Id + "' id='discount_" + P_Id + "' /></td><td><input class='form-control input-sm'  type='text' placeholder='备注' name='remark_" + P_Id + "' id='remark_" + P_Id + "' /></td></tr>");
                                select_item.removeAttr("data-pid")
                                var item = $("#price_" + data.data[0].Id);
                                item.val(data.data[0].Price)
                                $("#product_input").val("")
                                //总价运算
                                $("#order_" + P_Id + "").unbind("blur")
                                $("#order_" + P_Id + "").on("blur", function () {
                                    var count = $("#order_" + P_Id + "").val();
                                    var price = $("#price_" + P_Id + "").val();
                                    $("#totalPrice_" + P_Id + "").val(count * price)
                                    $("#discount_" + P_Id + "").val(count * price);
                                })
                                $("#price_" + P_Id + "").unbind("blur")
                                $("#price_" + P_Id + "").on("blur", function () {
                                    var count = $("#order_" + P_Id + "").val();
                                    var price = $("#price_" + P_Id + "").val();
                                    $("#totalPrice_" + P_Id + "").val(count * price)
                                    $("#discount_" + P_Id + "").val(count * price);
                                })
                             }
                            else if (data.result == "FALL") {
                                errorAlert("产品不存在")
                            }
                        }
                    });
                } else {
                    errorAlert("请不要重复添加相同产品")
                }
            }
    });
    $("#add-orderPrice-form").validate({
        debug: true,
        //验证通过的正式提交函数
        submitHandler: function (form) {
            $("#add-submit").attr("disabled", true)
            $(form).ajaxSubmit(function (data) {
                if (data.result == "SUCCESS") {
                    alert("添加成功！");
                    $("#add-submit").removeAttr("disabled")
                    $("#myModal").modal('hide')
                    $.ajax({
                        url: "/SalesProcess/OrderPriceListPartial",
                        data: {
                            orderId: $("#order_id").attr("data-oid")
                        },
                        success: function (data) {
                            $("#orderPrice_list_content").html(data)
                            $('.modal-backdrop.in').remove()
                            $('body').removeClass('modal-open')
                            $("#confirm-btn").removeClass("disabled")
                        }
                    });
                }
                else if (data.result == "UNAUTHORIZED") {
                    $("#add-submit").removeAttr("disabled")
                    errorAlert("报价已存在!");
                } else if (data.result == "WARNING") {
                    $("#add-submit").removeAttr("disabled")
                    errorAlert("订单已审批，无法添加!");
                }
                else if (data.result == "FAIL") {
                    $("#add-submit").removeAttr("disabled")
                    errorAlert("保存失败!");
                }
                else {
                    $("#add-submit").removeAttr("disabled")
                    errorAlert(data.errmsg)
                }
            })
        },
        errorClass: "has-error",
        //验证失败
        errorPlacement: function (error, element) {
            error.appendTo(element.parent())
            $("#add-submit").removeAttr("disabled")
        }
    })
</script>