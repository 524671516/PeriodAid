@{
    ViewBag.Title = "ProductList";
    Layout = "~/Views/Shared/_SalesProcessLayout.cshtml";
}
<table class="offline-search-box">
    <tr>
        <td class="pull-right">
            <label>产品名称：</label>
            <input class="form-control input-sm offline-search-inline" id="storage-product-query" placeholder="搜索内容" />
            <a class="btn btn-info btn-sm" id="storage-product-search"><i class="fa fa-search"></i>&nbsp;&nbsp;搜索</a>
        </td>
    </tr>
</table>
<a class="btn btn-info btn-sm" id="add-product" style="margin-bottom:18px;"><i class="fa fa-plus"></i>&nbsp;&nbsp;新增产品信息</a>
<ul class="nav nav-tabs" role="tablist">
    <li role="presentation" class="product-list-li active"><a aria-controls="home" role="tab" data-toggle="tab" data-id="0" class="type-btn" style="cursor:pointer">全部种类</a></li>
    @foreach (var list in ViewBag.ProductType)
    {
        <li role="presentation" class="product-list-li"><a aria-controls="profile" role="tab" data-toggle="tab" data-id="@list.Id" class="type-btn" style="cursor:pointer">@list.Type_Name</a></li>
    }
</ul>
<div id="product_list_content">
</div>


@section scripts{
    <script>
        $(function () {
            $.ajax({
                url: "/SalesProcess/ProductListPartial",
                data: {
                    page: 1,
                    productType: $(".product-list-li.active").children(".type-btn").attr("data-id"),
                    query: $("#storage-product-query").val()
                },
                success: function (data) {
                    $("#product_list_content").html(data)
                }
            });
        });
        //新增
        $("#add-product").on("click", function () {
            $.ajax({
                url: '/SalesProcess/AddProductPartial',
                data: {
                },
                success: function (data) {
                    $('#modal-content').html(data)
                    $("#myModal").modal('show')
                }
            })
        })
        //搜索
        $("#storage-product-search").click(function () {
            $.ajax({
                url: "/SalesProcess/ProductListPartial",
                data: {
                    page: 1,
                    productType: $(".product-list-li.active").children(".type-btn").attr("data-id"),
                    query: $("#storage-product-query").val()
                },
                success: function (data) {
                    $("#product_list_content").html(data);
                }
            })
        });
        // 选种类
        $(".type-btn").on("click", function () {
            $.ajax({
                url: "/SalesProcess/ProductListPartial",
                data: {
                    productType: $(this).attr("data-id"),
                    query: $("#storage-product-query").val()
                },
                success: function (data) {
                    $("#product_list_content").html(data)
                }
            })
        })
        
    </script>
}
