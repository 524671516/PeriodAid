@model PeriodAid.Models.SP_Seller
<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
    <h2>新增业务员信息</h2>
</div>
<div class="modal-body">
    @using (Html.BeginForm("AddSellerPartial", "SalesProcess", FormMethod.Post, new { @id = "add-seller-form" }))
    {
        @Html.AntiForgeryToken()
        <div class="form-horizontal">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                <label class="col-md-2 control-label">姓名</label>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Seller_Name, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Seller_Name, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <label class="col-md-2 control-label">手机号</label>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Seller_Mobile, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Seller_Mobile, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <label class="col-md-2 control-label">类型</label>
                <div class="col-md-10">
                    @Html.DropDownListFor(model => model.Seller_Type, ViewBag.SellerType as SelectList ,"- 请选择 -", new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Seller_Type, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="新增" class="btn btn-default" id="add-submit" />
                </div>
            </div>
        </div>
    }

</div>
<script>
    $(function () {
        $("#add-seller-form").ajaxForm(function (data) {
            if (data == "SUCCESS") {
                $("#myModal").modal('hide')
                $.ajax({
                    url: "/SalesProcess/SellerListPartial",
                    data: {
                        query: $("#seller-query").val()
                    },
                    success: function (data) {
                        $("#seller_list_content").html(data)
                        $('.modal-backdrop.in').remove()
                        $('body').removeClass('modal-open')
                    }
                });
                alert("添加成功！");
            }
            else if (data == "UNAUTHORIZED") {
                errorAlert("已存在");
            } else {
                errorAlert("添加失败！");
            }
        });
    })
</script>