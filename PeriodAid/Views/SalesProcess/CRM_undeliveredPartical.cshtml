                    c_status: that.attr("data-status")
                },
                success: function (data) {
                    $.ajax({
                        url: "/SalesProcess/GetCrmInfo/",
                        data: {
                        },
                        success: function (data) {
                            // 订单新增(gy.erp.trade.add)  ERP API 暂时不写
                            $.ajax({

                            })
                            alert("已推送至ERP等待审核")
                            $.ajax({
                                url: "/SalesProcess/CRM_undeliveredPartical/",
                                data: {
                                    status: "3779515"
                                },
                                success: function (data) {
                                    $("#undelivered_list_content").html(data)
                                }
                            })
                        }
                    })
                }
            })
        })
    })
</script>