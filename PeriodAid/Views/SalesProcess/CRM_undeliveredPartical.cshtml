@model IEnumerable<PeriodAid.Models.CRM_Contract>

<div>
    <table class="table table-hover">
        <tr style="background-color:#f9f9f9">
            <th style="width:5%">
                <label class="checkbox-custom">
                    <input type="checkbox" class="btn" id="checkbox-all">
                </label>
            </th>
            <th style="width:10%">订单号</th>
            <th style="width:15%">合同名称</th>
            <th style="width:15%">合同总金额</th>
            <th style="width:15%">客户名称</th>
            <th style="width:15%">订单状态</th>
            <th style="width:20%">
                <a class="btn btn-xs btn-success" id="batch_change_status"  role="button" style="cursor:pointer"><i class="fa fa-upload"></i>&nbsp;&nbsp;批量同步</a>
                <a class="btn btn-xs btn-success" id="batch_change_deliverys" role="button" style="cursor:pointer">批量获取ERP配送信息</a>
            </th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <label class="checkbox-custom">
                        <input type="checkbox" class="btn checkbox" data-val="@item.id">
                    </label>
                </td>
                <td>@item.contract_id</td>
                <td>@item.title</td>
                <td>@item.total_amount</td>
                <td></td>
                <td>@Html.ContractStatus(item.status)</td>
                
                @if (item.status == "3779515")
                {
                    <td>
                        <a class="change_status btn btn-xs btn-success" role="button" data-val="@item.id" style="cursor:pointer">同步ERP</a>
                    </td>
                }
                else if (item.status == "3780205")
                {
                    <td>
                       <a class="get_erp_status btn btn-xs btn-success" role="button" data-val="@item.id" style="cursor:pointer">获取ERP配送信息</a>
                    </td>
                }
                else
                {
                    <td></td>
                }
            </tr>
        }
    </table>
</div>
<script>
    $(function () {
        $("#batch_change_status").hide()
        $("#batch_change_deliverys").hide()
        var orderarry = [];
        //单选
        $(".checkbox").click(function () {
            var that = $(this)
            var C_id = that.attr("data-val")
            var select = that.is(":checked");
            if (select) {
                orderarry.push(C_id)
                $("#batch_change_status").show()
                $(".change_status").hide()
            } else {
                orderarry.remove(C_id)
                $("#checkbox-all").prop("checked", false)
            }
            if ($("input:checked").length < 2) {
                $("#batch_change_status").hide()
                $(".change_status").show()
            }
        })
        //全选
        $("#checkbox-all").click(function () {
            var i = 0
            if ($(this).is(":checked")) {
                $("#batch_change_status").show()
                $(".change_status").hide()
                $("input").prop("checked", true);
                var list = $(".checkbox:checked")
                for (i; i < list.length; i++) {
                    var list_data = $(list[i]).attr("data-val")
                    if (orderarry.indexOf(list_data) == -1) {
                        orderarry.push(list_data)
                    }
                }
            } else {
                $("#batch_change_status").hide()
                $(".change_status").show()
                $("input").prop("checked", false);
                var list = $(".checkbox:unchecked")
                for (i; i < list.length; i++) {
                    orderarry.remove($(list[i]).attr("data-val"))
                }
            }
        })
        // 同步到ERP等待审核
        $("#batch_change_status").click(function () {
