
@using (Html.BeginForm("CreateWebEventPartial", "WebContent", FormMethod.Post, new { @id = "createwebevent-form" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <label class="control-label col-md-2" >活动名称</label>
            <div class="col-md-10">
                <input  class="form-control"/>
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2">活动类型</label>
            <div class="col-md-10">
                <input class="form-control" />
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2">活动标题</label>
            <div class="col-md-10">
                <input class="form-control" />
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2">摘要</label>
            <div class="col-md-10">
                <input class="form-control" />
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2">优惠券链接</label>
            <div class="col-md-10">
                <input class="form-control" />
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2">图片链接</label>
            <div class="col-md-10">
                <input class="form-control" />
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2">页面地址</label>
            <div class="col-md-10">
                <input class="form-control" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="保存" class="btn btn-default" id="create-webevent" />
            </div>
        </div>
    </div>
}


