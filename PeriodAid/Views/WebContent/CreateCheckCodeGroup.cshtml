@model PeriodAid.Models.CheckCode_Group
@using (Html.BeginForm("CreateCheckCodeGroup", "WebContent", FormMethod.Post, new { @id = "ccg-form" }))
{
    @Html.HiddenFor(m => m.Id)
    @Html.HiddenFor(m => m.EventStatus)
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <label class="control-label col-md-3" for="GroupName">活动名称</label>
            <div class="col-md-9">
                @Html.EditorFor(model => model.GroupName, new { htmlAttributes = new { @class = "form-control", @required = "required", @maxlength = "255" } })
                @Html.ValidationMessageFor(model => model.GroupName, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-3" for="EventTitle">活动标题</label>
            <div class="col-md-9">
                @Html.EditorFor(model => model.EventTitle, new { htmlAttributes = new { @class = "form-control", @required = "required", @maxlength = "255" } })
                @Html.ValidationMessageFor(model => model.EventTitle, "", new { @class = "text-danger" })
            </div>
        </div>      
        <div class="form-group">
            <label class="control-label col-md-3" for="EventType">活动类型</label>
            <div class="col-md-9">
                <select id="Event_Type" name="EventType" class="form-control" required>
                    <option>- 请选择 -</option>
                    <option value="0">类型一</option>
                    <option value="1">类型二</option>
                </select>
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-3" for="Enable_Statistic">是否统计</label>
            <div class="col-md-9">
                <select id="Enable_Statistic" name="Enable_Statistic" class="form-control" required>
                    <option>- 请选择 -</option>
                    <option value="true">是</option>
                    <option value="false">否</option>
                </select>
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-3" for="EventPicUrl">图片地址</label>
            <div class="col-md-9">
                @Html.EditorFor(model => model.EventPicUrl, new { htmlAttributes = new { @class = "form-control date-time", @required = "required", @maxlength = "255"} })
                @Html.ValidationMessageFor(model => model.EventPicUrl, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-3" for="EventSourceUrl">活动资源地址</label>
            <div class="col-md-9">
                @Html.EditorFor(model => model.EventSourceUrl, new { htmlAttributes = new { @class = "form-control", @required = "required", @maxlength = "255",@url=true } })
                @Html.ValidationMessageFor(model => model.EventSourceUrl, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-3" for="EventUrl">活动地址</label>
            <div class="col-md-9">
                @Html.EditorFor(model => model.EventUrl, new { htmlAttributes = new { @class = "form-control", @required = "required", @maxlength = "255", @url = true } })
                @Html.ValidationMessageFor(model => model.EventUrl, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-3" for="EventDescription">活动描述</label>
            <div class="col-md-9">
                @Html.TextAreaFor(model => model.EventDescription, new { @class = "form-control", @required = "required" })
                @Html.ValidationMessageFor(model => model.EventDescription, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-3 col-md-9">
                <input type="submit" value="保存" id="ccg-save" class="btn btn-default" />
            </div>
        </div>
    </div>
}
<script>
    $(function () {
        //按钮点击
        $("#ccg-save").click(function () {
            $(".form-group").removeClass("has-error");
            $(this).attr("disabled", "disabled").val("保存中...");
            $('#ccg-form').submit();
        }) 
        //表单验证
        $('#ccg-form').validate({
            focusCleanup: true,
            errorPlacement: function (error, element) {
                $("#ccg-save").attr("disabled", false).val("保存");
                element.parent().parent().addClass("has-error");
            },
            submitHandler: function (form) {
                setTimeout(formsubmit, 1000);
            },
        });
    });
    function formsubmit() {
        $('#ccg-form').ajaxSubmit(function (data) {
            if (data == "SUCCESS") {
                $('.modal-box').modal('hide');
                alert("添加成功");
                $.ajax({
                    url: "/WebContent/CheckCodeGroupListPartial",
                    success: function (data) {
                        $("#ccg-list").html(data);
                    },
                    error: function () {
                        alert("活动添加失败", "", function () {
                            $("#ccg-save").attr("disabled", false).val("保存");
                        }, { type: 'error' });
                    }
                })
            }
            else {
                alert("活动添加失败", "", function () {
                    $("#webevent-save").attr("disabled", false).val("保存");
                }, { type: 'error' });
            }
        });
    }
</script>




