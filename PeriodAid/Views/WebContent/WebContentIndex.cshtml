
@{
    ViewBag.Title = "线下门店信息";
    Layout = "~/Views/Shared/_WebContentLayout.cshtml";
    ViewBag.Current = "headingOne";
}
<table class="offline-search-box">
    <tr>
        <td class="pull-right">
            <label>类型选择:</label> 
            <select class="form-control input-sm offline-search-inline" id="select-input">
                <option value="">- 请选择 -</option>
                <option value="1">事件</option>
                <option value="2">漫画</option>
            </select>       
            <input class="form-control input-sm offline-search-inline" id="webevents-search-query" placeholder="搜索活动" />
            <a class="btn btn-info btn-sm" id="webevents-search-btn"><i class="fa fa-search"></i>&nbsp;&nbsp;搜索</a>
        </td>
    </tr>
</table>
<div>
    <a class="btn btn-info btn-sm" id="webevents-create"><i class="fa fa-plus"></i>&nbsp;&nbsp;新增活动</a>
</div>
<br />
<div id="webevents-list">

</div>
@Html.Partial("modal")
<script>
    $.ajax({
        url: "/WebContent/WebEventsList_Ajax",
        data:{
            eventtypeid:  $("#select-input").val(),
            query: $("#webevents-search-query").val()
        },
        success: function (data) {
            $("#webevents-list").html(data);
        }
    });
    //筛选
    $("#select-input").on("change", function () {
            $.ajax({
                url: "/WebContent/WebEventsList_Ajax",
                data: {
                    eventtypeid: $("#select-input").val(),
                    query: $("#webevents-search-query").val()
                },
                success: function (data) {
                    $("#webevents-list").html(data);
                }
            });
    })
    //搜索
    $("#webevents-search-btn").click(function () {
        $.ajax({
            url: "/WebContent/WebEventsList_Ajax",
            data: {
                eventtypeid: $("#select-input").val(),
                query: $("#webevents-search-query").val()
            },
            success: function (data) {
                $("#webevents-list").html(data);
            }
        })
    });
    //新增
    $("#webevents-create").on("click", function () {
        var link_url = "/WebContent/CreateWebEventPartial"
        var head = "新增活动"
        $.ajax({
            url: link_url,
            data: {
                random: Date.now()
            },
            success: function (data) {
                $(".modal-con").html(data);
                $(".modal-box").modal();
                $(".modal-head").text(head)
            }
        })
        return false
    })
</script>

