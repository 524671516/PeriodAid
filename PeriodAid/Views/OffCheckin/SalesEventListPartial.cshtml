@model PagedList.IPagedList<PeriodAid.Models.Off_SalesEvent>
@using PagedList.Mvc;
<table class="table table-hover table-condensed table-list" style="width:100%;table-layout:fixed">
    <tr class="offline-table-background">
        <th style="width:2%">
            <input type="checkbox" class="allChk" />
        </th>
        <th style="width:10%">
            活动编号
        </th>
        <th style="width:15%">
            活动名称
        </th>
        <th style="width:15%">
            申请人
        </th>
        <th style="width:18%">
            活动时间
        </th>
        <th style="width:15%">
            活动渠道
        </th> 
        <th style="width:30%">
            活动状态
        </th>     
        <th style="width:12%"></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                <input type="checkbox" name="subChk" value="@item.Id" data-region="@item.Off_StoreSystem_Id" />
            </td>
            <td class="ellipsis">
                @if (item.SerialNo == null)
                {
                    <span>空</span>
                }
                else
                {
                    @Html.DisplayFor(modelItem => item.SerialNo)
                }
            </td>
            <td class="ellipsis">
                @Html.DisplayFor(modelItem => item.EventTitle)
            </td>
            <td class="ellipsis">
                @Html.DisplayFor(modelItem => item.CreateUserName)
            </td>
            <td class="ellipsis">
                @Html.Encode(@item.EndDate.ToString("yyyy/MM/dd")+"-"+@item.StartDate.ToString("yyyy/MM/dd"))
            </td>
            <td class="ellipsis">
                @Html.Encode(@item.Off_StoreSystem.SystemName)
            </td>
            <td class="ellipsis ">
                @if (item.Status == 1)
                {
                    <span>已审核</span>
                }
                else
                {
                    <span>已提交</span>
                }

            </td>
            <td>
                @Html.ActionLink("修改", "EditSalesEvent", new { id = item.Id }, new { @class = "btn btn-xs btn-info saleevent-edit" })
                @Html.ActionLink("删除", "DeleteSalesEvent", new { id = item.Id }, new { @class = "btn btn-xs btn-danger saleevent-del" })
            </td>
        </tr>
    }
</table>
<div class="text-right">@Html.PagedListPager(Model, page => Url.Action("SalesEventListPartial", new { page }))</div>
<script>
    $(function () {
        //页码
        $(".pagination > li > a").click(function () {
            var l = $(this).attr("href");
            var query = $("#offstore-search-query").val();
            l = l + "&query=" + query;
            $.ajax({
                url: l,
                success: function (data) {
                    $("#saleevent-list").html(data);
                }
            });
            return false;
        });
        //修改信息
        $(".saleevent-edit").click(function () {
            var url = $(this).attr("href")
            var head = "修改门店信息"
            $.ajax({
                url: url,
                success: function (data) {
                    $(".modal-con").html(data);
                    $(".modal-box").modal();
                    $(".modal-head").text(head)
                }
            });
            return false;
        });
        //删除门店
        $(".saleevent-del").click(function () {
            var url = $(this).attr("href");
            confirm("确定要删除吗?", "你将把此条信息从活动列表中删除", function (isConfirm) {
                if (isConfirm) {
                    $.ajax({
                        url: url,
                        type: "post",
                        success: function (data) {
                            if (data == "SUCCESS") {
                                setTimeout(function () {
                                    $.ajax({
                                        url: "/OffCheckin/SalesEventListPartial",
                                        success: function (data) {
                                            $("#saleevent-list").html(data);
                                        }
                                    })
                                    alert("删除成功")
                                }, 1000);
                            } else {
                                alert("删除失败", "未知错误", function () {
                                    //after click the confirm button, will run this callback function
                                }, { type: 'error' });
                            }
                        }
                    })
                }
            });
            return false;
        })
    });
</script>
