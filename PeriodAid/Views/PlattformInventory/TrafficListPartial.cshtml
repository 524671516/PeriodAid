@model PagedList.IPagedList<PeriodAid.Models.SS_TrafficData>
@using PagedList.Mvc;
<div>
    <ul class="nav nav-tabs" role="tablist">
        <li role="presentation" class="active"><a href="#all" aria-controls="home" role="tab" data-toggle="tab">全部平台</a></li>
        <li role="presentation"><a href="#APP" aria-controls="profile" role="tab" data-toggle="tab">APP</a></li>
        <li role="presentation"><a href="#M站" aria-controls="messages" role="tab" data-toggle="tab">M站</a></li>
        <li role="presentation"><a href="#PC" aria-controls="settings" role="tab" data-toggle="tab">PC</a></li>
        <li role="presentation"><a href="#手Q" aria-controls="settings" role="tab" data-toggle="tab">手Q</a></li>
        <li role="presentation"><a href="#微信" aria-controls="settings" role="tab" data-toggle="tab">微信</a></li>
    </ul>
    <table class="table table-hover">
        <tr>
            <th>平台名称</th>
            <th>商品流量</th>
            <th>访客访次</th>
            <th>买家数</th>
            <th>订单数</th>
        </tr>
        @foreach(var item in Model)
        {
            <tr>
                <td>@item.SS_TrafficSource.TrafficSource_Name</td>
                <td>@item.Product_Flow</td>
                <td>@item.Product_Visitor</td>
                <td>@item.Product_Customer</td>
                <td>@item.Order_Count</td>
            </tr>
        }
    </table>
    <div class="text-right">
        @Html.PagedListPager(Model, page => Url.Action("TrafficListPartial", new { page }))
    </div>
</div>
<script>
    $(function () {
        $(".pagination > li > a").click(function () {
            var l = $(this).attr("href");
            $.ajax({
                url: l,
                data: {
                    plattformId: getUrlParam('plattformId'),
                    productId: $("#traffic-list").attr("data-val"),
                    query: $("#traffic-product-query").val()
                },
                success: function (data) {
                    $("#traffic-list").html(data);
                }
            });
            return false;
        });
