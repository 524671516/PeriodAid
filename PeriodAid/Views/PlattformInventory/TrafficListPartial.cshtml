@model PagedList.IPagedList<PeriodAid.Models.SS_TrafficData>
@using PagedList.Mvc;
<div>
    <table class="table table-hover">
        <tr>
            <th>平台名称</th>
            <th>商品流量</th>
            <th>访客访次</th>
            <th>买家数</th>
            <th>订单数</th>
        </tr>
        @foreach(var item in Model)
        {
            <tr>
                <td>@item.SS_TrafficSource.TrafficSource_Name</td>
                <td>@item.Product_Flow</td>
                <td>@item.Product_Visitor</td>
                <td>@item.Product_Customer</td>
                <td>@item.Order_Count</td>
                <td>@item.Update</td>
            </tr>
        }
    </table>
    <div class="text-right">
        @Html.PagedListPager(Model, page => Url.Action("TrafficListPartial", new { page }))
    </div>
</div>
<script>
    $(function () {
        // 页码
        var start_time = $("#traffci-date-time").attr("date-time")
        $(".pagination > li > a").click(function () {
            var l = $(this).attr("href");
            $.ajax({
                url: l,
                data: {
                    plattformId: getUrlParam('plattformId'),
                    productId: getUrlParam('productId'),
                    query: $("#traffic-product-query").val(),
                    trafficPlattformId: $(".traffic-list-li.active").children(".plattform-btn").attr("data-id"),
                    start:start_time
                },
                success: function (data) {
                    $("#traffic-list").html(data);
                }
            });
            return false;
        });
    })
</script>