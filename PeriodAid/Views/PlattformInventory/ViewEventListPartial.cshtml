
<div class="h2">产品活动详情</div>
<div>
    <table class="table table-hover">
        <tr>
            <th>产品名称</th>
            <th>产品编号</th>
            <th>活动名称</th>
            <th>活动日期</th>
            <th>当日销量</th>
        </tr>
        @foreach(var item in ViewBag.eventList)
        {
            <tr>
                <td>@item.SS_Product.Item_Name</td>
                <td>@item.Id</td>
                <td>@item.EventName</td>
                <td>@item.EventDate</td>
                <td>
                    @foreach (var count in ViewBag.salesCount)
                    {
                        @count.Sales_Count
                    }
                </td>

            </tr>
        }
    </table>
    <h5 class="float-right"><span class="glyphicon glyphicon-chevron-left"></span><a style="cursor:pointer" href="/PlattformInventory/EventList">返回</a></h5>
</div>

