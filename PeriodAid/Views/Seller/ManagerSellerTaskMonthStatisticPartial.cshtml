@model IEnumerable<PeriodAid.Models.Wx_SellerTaskMonthStatistic>

<div class="list-block">
    <ul>
        <li>
            <a href="#" class="item-link smart-select" data-back-on-select="true" data-page-title="选择月份" data-back-text="返回">
                <select name="month">
                    <option value="0" selected>2017-07</option>
                    <option value="1">2017-06</option>
                    <option value="2">2017-05</option>
                </select>
                <div class="item-content">
                    <div class="item-inner">
                        <div class="item-title label">选择月份</div>
                        <div class="item-after">2016-07</div>
                    </div>
                </div>
            </a>
        </li>
    </ul>
</div>
<div class="content-block-title">暗促签到积分列表</div>
<div class="list-block media-list">
    <ul>
        @foreach (var item in Model)
        {
            <li>
                <a class="item-content manager-sellermonth" href="/Seller/ManagerSellerTaskSeller?id=@item.Off_Seller.Id">
                    <div class="item-inner">
                        <div class="item-title-row">
                            <div class="item-title font-black">@item.Off_Seller.Name</div>
                        </div>
                        <div class="subtitle margin-top-7 font-black">@item.Off_Seller.Off_Store.StoreName</div>
                        @if (item.AttendanceCount < 60)
                {
                            <div class="color-red media-paddin-right-10 media-font-24 media-position-right">@item.AttendanceCount&nbsp;&nbsp;<i class="fa fa-angle-right media-arrowright-gray" aria-hidden="true"></i></div>
                        }
                        else {
                            <div class="color-green media-paddin-right-10 media-font-24 media-position-right">@item.AttendanceCount&nbsp;&nbsp;<i class="fa fa-angle-right media-arrowright-gray" aria-hidden="true"></i></div>
                        }
                    </div>
                </a>
            </li>
        }
    </ul>
</div>