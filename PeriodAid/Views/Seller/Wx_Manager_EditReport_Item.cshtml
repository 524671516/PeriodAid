@model PeriodAid.Models.Wx_ReportItemsViewModel

<div class="container">
    @foreach (var item in Model.ProductList)
    {
        if (Model.Storage_Required && Model.Amount_Requried)
        {
            <div class="row offsales_item">
                <div class="col-xs-4 offsales_title">@Html.Encode(item.SimpleName)</div>
                <input class="col-xs-2 offsales_input" type="number" placeholder="销量" name="sales_@item.ProductId" id="sales_@item.ProductId" value="@item.SalesCount" />
                <input class="col-xs-3 offsales_input" type="number" placeholder="库存" name="storage_@item.ProductId" id="storage_@item.ProductId" value="@item.Storage" />
                <input class="col-xs-3 offsales_input" type="number" placeholder="销售额" name="amount_@item.ProductId" id="amount_@item.ProductId" value="@item.SalesAmount" />
            </div>
        }
        else if (Model.Storage_Required)
        {
            <div class="row offsales_item">
                <div class="col-xs-4 offsales_title">@Html.Encode(item.SimpleName)</div>
                <input class="col-xs-4 offsales_input" type="number" placeholder="销量" name="sales_@item.ProductId" id="sales_@item.ProductId" value="@item.SalesCount" />
                <input class="col-xs-4 offsales_input" type="number" placeholder="库存" name="storage_@item.ProductId" id="storage_@item.ProductId" value="@item.Storage" />
                <input class="offsales_input hidden" type="hidden" placeholder="销售额" name="amount_@item.ProductId" id="amount_@item.ProductId" value="@item.SalesAmount" />
            </div>
        }
        else if (Model.Amount_Requried)
        {
            <div class="row offsales_item">
                <div class="col-xs-4 offsales_title">@Html.Encode(item.SimpleName)</div>
                <input class="col-xs-4 offsales_input" type="number" placeholder="销量" name="sales_@item.ProductId" id="sales_@item.ProductId" value="@item.SalesCount" />
                <input class="offsales_input hidden" type="hidden" placeholder="库存" name="storage_@item.ProductId" id="storage_@item.ProductId" value="@item.Storage" />
                <input class="col-xs-4 offsales_input" type="number" placeholder="销售额" name="amount_@item.ProductId" id="amount_@item.ProductId" value="@item.SalesAmount" />
            </div>
        }
        else
        {
            <div class="row offsales_item">
                <div class="col-xs-5 offsales_title">@Html.Encode(item.SimpleName)</div>
                <input class="col-xs-7 offsales_input" type="number" placeholder="销量" name="sales_@item.ProductId" id="sales_@item.ProductId" value="@item.SalesCount" />
                <input class="offsales_input hidden" type="hidden" placeholder="库存" name="storage_@item.ProductId" id="storage_@item.ProductId" value="@item.Storage" />
                <input class="offsales_input hidden" type="hidden" placeholder="销售额" name="amount_@item.ProductId" id="amount_@item.ProductId" value="@item.SalesAmount" />
            </div>
        }
    }
</div>
