@model IEnumerable<PeriodAid.Models.Off_Seller>
<div class="navbar">
    <div class="navbar-inner">
        <div class="left">
            <a href="#" class="back link">
                <i class="fa fa-chevron-left" aria-hidden="true"></i>
                <span>返回</span>
            </a>
        </div>
        <div class="center sliding"><strong>查询促销员</strong></div>
        <div class="right">
            <a href="" class="link icon-only open-panel"><i class="icon icon-bars"></i></a>
        </div>
    </div>
</div>
<div class="pages">
    <div class="page" data-page="manager-queryseller">
        <form class="searchbar">
            <div class="searchbar-input">
                <input type="search" placeholder="搜索">
                <a href="#" class="searchbar-clear"></a>
            </div>
            <a href="#" class="searchbar-cancel">取消</a>
        </form>
        <div class="searchbar-overlay"></div>
        <div class="page-content">
            <div class="content-block searchbar-not-found">
                查找内容不存在
            </div>

            <div class="list-block list-block-search searchbar-found">
                <ul>
                    @foreach (var item in Model)
                    {
                        <li>
                            <a href="#" class="item-content item-link">
                                <div class="item-inner">
                                    <div class="item-title">@Html.Encode(item.Name)</div>
                                    <div class="item-after">@Html.Encode(item.Off_Store.StoreName)</div>
                                </div>
                            </a>
                        </li>
                    }
                    <li>
                        <a href="/Seller/Manager_AjaxSellerDetails" class="item-content item-link">
                            <div class="item-inner">
                                <div class="item-title">陈皮</div>
                                <div class="item-after">大润发-盛泽店</div>
                            </div>
                        </a>
                    </li>
                    <li>
                        <a href="#" class="item-content item-link">
                            <div class="item-inner">
                                <div class="item-title">张三</div>
                                <div class="item-after">大润发-苏州何山店</div>
                            </div>
                        </a>
                    </li>
                    <li>
                        <a href="#" class="item-content item-link">
                            <div class="item-inner">
                                <div class="item-title">李四</div>
                                <div class="item-after">家乐福-南方店</div>
                            </div>
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</div>