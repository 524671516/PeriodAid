

@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, minimum-scale=1, user-scalable=no, minimal-ui">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="apple-mobile-web-app-status-bar-style" content="black">
    <title>促销员系统</title>
    <link href="~/Content/font-awesome.min.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <link href="~/Content/font-awesome-ie7.min.css" rel="stylesheet" />
    <link href="~/Content/framework7.ios.min.css" rel="stylesheet" />
    <link href="~/Content/framework7.ios.colors.min.css" rel="stylesheet" />
    <link href="~/Content/Seller.css" rel="stylesheet" />
</head>
<body>
    <!-- Status bar overlay for full screen mode (PhoneGap) -->
    <div class="statusbar-overlay"></div>
    <div class="panel-overlay"></div>
    <div class="panel panel-left panel-reveal left-nav" id="user-panel">
       
    </div>
    <!-- Views -->
    <div class="views">
        <!-- Your main view, should have "view-main" class -->
        <div class="view view-main">
            <div class="navbar">
                <div class="navbar-inner">
                    <div class="center sliding"><strong>促销员系统</strong></div>
                    <div class="right">
                        <a href="" class="link icon-only open-panel"><i class="icon icon-bars"></i></a>
                    </div>
                </div>
            </div>
            <div class="pages navbar-through toolbar-through">
                <div class="page" data-page="manager-home">
                    <div class="page-content">
                        @*<div class="circle-box">
                            <span>50.22</span>
                            <div>同期平均销量</div>
                        </div>*@
                        <div class="list-block media-list">
                            <ul>
                                <li>
                                    <div class="item-content">
                                        <div class="item-inner">
                                            <div class="item-title-row">
                                                <div class="item-title">店铺同期平均销量</div>
                                            </div>
                                            <div class="item-subtitle color-gray" style="font-size:12px;margin-top:5px;">今日无日程</div>
                                        </div>
                                        <div class="item-media">
                                            <span class="color-blue" style="padding-right:15px;font-size:30px;">50.22</span>
                                        </div>
                                    </div>
                                </li>
                            </ul>
                        </div>
                        <div class="list-block">
                            <div class="row no-gutter">
                                <a href="javascript:;" data-url="/Seller/Seller_CheckIn" class="col-33 active" id="checkin">
                                    <div class="color-blue">
                                        <i class="fa fa-sign-in" aria-hidden="true"></i>
                                    </div>
                                    <span>开始签到</span>
                                </a>
                                <a href="javascript:;" data-url="/Seller/Seller_CheckOut" class="col-33 readonly" id="checkout">
                                    <div class="color-blue">
                                        <i class="fa fa-sign-out" aria-hidden="true"></i>
                                    </div>
                                    <span>开始签退</span>
                                </a>
                                <a href="/Seller/Seller_Report" class="col-33" id="report">
                                    <div class="color-blue">
                                        <i class="fa fa-edit" aria-hidden="true"></i>
                                    </div>
                                    <span>提报销量</span>
                                </a>
                            </div>
                        </div>
                        <div class="content-block-title">工具</div>
                        <div class="list-block">
                            <ul>
                                <li>
                                    <a href="/Seller/Seller_ScheduleList" class="item-content item-link">
                                        <div class="item-inner">
                                            <div class="item-title">排班表</div>
                                            <div class="item-after"></div>
                                        </div>
                                    </a>
                                </li>
                                <li>
                                    <a href="/Seller/Seller_ConfirmedData" class="item-content item-link">
                                        <div class="item-inner">
                                            <div class="item-title">考勤数据</div>
                                            <div class="item-after"></div>
                                        </div>
                                    </a>
                                </li>
                                <li>
                                    <a href="/Seller/Seller_CreditInfo" class="item-content item-link">
                                        <div class="item-inner">
                                            <div class="item-title">完善账户信息</div>
                                            <div class="item-after"></div>
                                        </div>
                                    </a>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="hidden">
        <span id="appId">@ViewBag.AppId</span>
        <span id="timeStamp">@ViewBag.TimeStamp</span>
        <span id="nonce">@ViewBag.Nonce</span>
        <span id="url">@ViewBag.Url</span>
        <span id="signature">@ViewBag.Signature</span>
    </div>
    <!-- Path to Framework7 Library JS-->
    <script src="~/Scripts/framework7.min.js"></script>
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/jquery.form.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <!-- Path to your app js-->
    <script src="http://res.wx.qq.com/open/js/jweixin-1.0.0.js" type="text/javascript"></script>
    <script charset="utf-8" src="http://map.qq.com/api/js?v=2.exp"></script>
    <script src="~/Scripts/my-validate.js"></script>
    <script src="~/Scripts/Seller.js"></script>
</body>
</html>

