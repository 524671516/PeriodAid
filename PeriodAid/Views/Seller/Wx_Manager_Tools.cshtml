
@{
    ViewBag.Title = "督导管理 工具";
    Layout = "~/Views/Seller/_Wx_Manager_Layout.cshtml";
    ViewBag.Current = 2;
}
<div class="hd">
    <h2 class="page_title text-center">督导管理 工具</h2>
</div>
<div class="weui_cells">
    <div class="weui_cell">
        <div class="weui_cell_bd weui_cell_primary">
            <p>@Html.Encode(ViewBag.NickName)</p>
        </div>
        <div class="weui_cell_ft">@Html.Encode(ViewBag.Mobile)</div>
    </div>
</div>
<div class="weui_cells_title">管理工具</div>
<div class="weui_cells weui_cells_access">
    <a class="weui_cell" href="/Seller/Wx_Manager_ReportList">
        <div class="weui_cell_bd weui_cell_primary">
            <p>销量排名</p>
        </div>
        <div class="weui_cell_ft"></div>
    </a>
    <a class="weui_cell" href="/Seller/Wx_Manager_EventList">
        <div class="weui_cell_bd weui_cell_primary">
            <p>活动门店列表</p>
        </div>
        <div class="weui_cell_ft"></div>
    </a>
    <a class="weui_cell salary_details" href="/Seller/Wx_Manager_StoreList">
        <div class="weui_cell_bd weui_cell_primary">
            <p>管辖门店列表</p>
        </div>
        <div class="weui_cell_ft"></div>
    </a>
    <a class="weui_cell" href="/Seller/Wx_Manager_QuerySeller">
        <div class="weui_cell_bd weui_cell_primary">
            <p>查询促销员</p>
        </div>
        <div class="weui_cell_ft"></div>
    </a>
</div>
<div class="weui_cells_title">使用帮助</div>
<div class="weui_cells weui_cells_access">
    <a class="weui_cell salary_details" href="javascript:;">
        <div class="weui_cell_bd weui_cell_primary">
            <p>使用指南</p>
        </div>
        <div class="weui_cell_ft"></div>
    </a>
</div>
