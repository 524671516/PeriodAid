</div>
<script>
    $(".angle_btn").on("click", function () {
        var that = $(this)
        if (that.children("i").hasClass("fa-angle-double-down")) {
            that.children("i").removeClass("fa-angle-double-down")
            that.children("i").addClass("fa-angle-double-up")
        } else {
            that.children("i").removeClass("fa-angle-double-up")
            that.children("i").addClass("fa-angle-double-down")
        }
    })
    // 替换
    var str = $(".replace_text").text()
    $(".replace_text").text(str.replace("/"," "))
</script>